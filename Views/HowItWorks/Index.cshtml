<!-- Tutorial Content -->
<div class="tab-content" id="tutorialTabContent">
    <!-- Getting Started Section -->
    <div class="tab-pane fade show active" id="getting-started" role="tabpanel">
        <section class="tutorial-section">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center mb-5">
                        <i class="fas fa-rocket feature-icon"></i>
                        <h2 class="mb-3">Getting Started with EquiBillBook</h2>
                        <p class="lead">Learn how to set up your account and configure your business settings</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-10 offset-lg-1">
                        <!-- Step 1 -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">1</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Create Your Account</h4>
                                    <p>Start by registering for an EquiBillBook account:</p>
                                    <ul>
                                        <li>Visit the <a href="/register">Registration page</a></li>
                                        <li>Fill in your business details (name, email, phone number)</li>
                                        <li>Choose a secure password</li>
                                        <li>Verify your email address</li>
                                        <li>Complete the registration process</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Step 2 -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">2</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Configure Organization Settings</h4>
                                    <p>Set up your business profile and preferences:</p>
                                    <ul>
                                        <li>Go to <strong>Settings → Organization Settings</strong></li>
                                        <li>Upload your business logo</li>
                                        <li>Enter your business name, address, and contact details</li>
                                        <li>Set your GST number (if applicable)</li>
                                        <li>Configure tax settings and financial year</li>
                                        <li>Set up currency and date formats</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Step 3 -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">3</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Add Your First Customer</h4>
                                    <p>Create customer records to start invoicing:</p>
                                    <ul>
                                        <li>Navigate to <strong>Customers → Add Customer</strong></li>
                                        <li>Enter customer name and contact information</li>
                                        <li>Add billing and shipping addresses</li>
                                        <li>Set credit limit (if applicable)</li>
                                        <li>Save the customer record</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Step 4 -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">4</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Add Items/Products</h4>
                                    <p>Set up your product catalog:</p>
                                    <ul>
                                        <li>Go to <strong>Items → Add Item</strong></li>
                                        <li>Enter item name, description, and SKU</li>
                                        <li>Set selling price and purchase price</li>
                                        <li>Configure tax rates</li>
                                        <li>Set stock tracking (if inventory enabled)</li>
                                        <li>Add HSN/SAC codes for GST compliance</li>
                                        <li>Save the item</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Step 5 -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">5</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Configure Invoice Templates</h4>
                                    <p>Customize your invoice appearance:</p>
                                    <ul>
                                        <li>Navigate to <strong>Settings → Invoice Template Settings</strong></li>
                                        <li>Choose from pre-designed templates or customize your own</li>
                                        <li>Add your logo and business details</li>
                                        <li>Configure fields to display/hide</li>
                                        <li>Preview and save your template</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="quick-tips">
                            <h5><i class="fas fa-lightbulb me-2"></i>Quick Tips for Getting Started</h5>
                            <ul>
                                <li>Complete your organization profile first - it appears on all your invoices</li>
                                <li>Set up tax settings correctly to ensure accurate calculations</li>
                                <li>Use the import feature to add multiple customers or items at once</li>
                                <li>Explore the dashboard to get an overview of your business</li>
                                <li>Take time to configure user permissions if you have a team</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Sales & Invoicing Section -->
    <div class="tab-pane fade" id="sales" role="tabpanel">
        <section class="tutorial-section">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center mb-5">
                        <i class="fas fa-file-invoice-dollar feature-icon"></i>
                        <h2 class="mb-3">Sales & Invoicing</h2>
                        <p class="lead">Learn how to create invoices, quotations, and manage your sales</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-10 offset-lg-1">
                        <!-- Creating Invoice -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">1</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Create a Sales Invoice</h4>
                                    <p>Generate professional invoices for your customers:</p>
                                    <ul>
                                        <li>Go to <strong>Sales → Add Sales</strong></li>
                                        <li>Select the customer from the dropdown</li>
                                        <li>Choose invoice date and due date</li>
                                        <li>Add items: Click "Add Item" and select from your product list</li>
                                        <li>Enter quantity and price (auto-populated from item master)</li>
                                        <li>Apply discounts if needed (item-level or invoice-level)</li>
                                        <li>Review tax calculations</li>
                                        <li>Add shipping charges or other additional charges</li>
                                        <li>Add notes/terms if required</li>
                                        <li>Click "Save" to create the invoice</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Sales Quotation -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">2</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Create a Sales Quotation</h4>
                                    <p>Send price quotes to potential customers:</p>
                                    <ul>
                                        <li>Navigate to <strong>Sales Quotation → Add</strong></li>
                                        <li>Select customer and enter quotation details</li>
                                        <li>Add items with quantities and prices</li>
                                        <li>Set validity period for the quotation</li>
                                        <li>Save and send via email to customer</li>
                                        <li>Convert quotation to sales order when accepted</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Sales Order -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">3</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Create a Sales Order</h4>
                                    <p>Manage confirmed orders from customers:</p>
                                    <ul>
                                        <li>Go to <strong>Sales Order → Add</strong></li>
                                        <li>Select customer and order date</li>
                                        <li>Add items and quantities</li>
                                        <li>Set expected delivery date</li>
                                        <li>Save the order</li>
                                        <li>Convert to invoice when goods are delivered</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Recording -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">4</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Record Customer Payments</h4>
                                    <p>Track payments received from customers:</p>
                                    <ul>
                                        <li>Navigate to the invoice detail page</li>
                                        <li>Click "Receive Payment" button</li>
                                        <li>Enter payment amount and date</li>
                                        <li>Select payment mode (Cash, Bank, Cheque, Online, etc.)</li>
                                        <li>Add reference number if applicable</li>
                                        <li>Save the payment</li>
                                        <li>View payment history from invoice details</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Printing & Emailing -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">5</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Print & Email Invoices</h4>
                                    <p>Share invoices with your customers:</p>
                                    <ul>
                                        <li>Open any invoice from the Sales list</li>
                                        <li>Click "Print" to generate PDF</li>
                                        <li>Click "Email" to send directly to customer</li>
                                        <li>Customize email template if needed</li>
                                        <li>Track email delivery status</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="quick-tips">
                            <h5><i class="fas fa-lightbulb me-2"></i>Sales Tips</h5>
                            <ul>
                                <li>Use sales quotations for non-committed price estimates</li>
                                <li>Convert quotations to orders when customer confirms</li>
                                <li>Set up payment reminders for overdue invoices</li>
                                <li>Use recurring invoices for regular customers</li>
                                <li>Take advantage of invoice numbering customization</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Purchase Section -->
    <div class="tab-pane fade" id="purchase" role="tabpanel">
        <section class="tutorial-section">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center mb-5">
                        <i class="fas fa-shopping-cart feature-icon"></i>
                        <h2 class="mb-3">Purchase Management</h2>
                        <p class="lead">Manage your purchases, suppliers, and vendor payments</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-10 offset-lg-1">
                        <!-- Add Supplier -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">1</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Add a Supplier</h4>
                                    <p>Create supplier records for purchase management:</p>
                                    <ul>
                                        <li>Go to <strong>Supplier → Add Supplier</strong></li>
                                        <li>Enter supplier name and contact details</li>
                                        <li>Add billing address</li>
                                        <li>Set credit limit and payment terms</li>
                                        <li>Save supplier information</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Purchase Bill -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">2</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Record a Purchase Bill</h4>
                                    <p>Enter bills from your suppliers:</p>
                                    <ul>
                                        <li>Navigate to <strong>Purchase → Add Purchase</strong></li>
                                        <li>Select supplier from dropdown</li>
                                        <li>Enter bill date and due date</li>
                                        <li>Add items purchased (this updates inventory)</li>
                                        <li>Enter quantities and purchase prices</li>
                                        <li>Review tax calculations</li>
                                        <li>Save the purchase bill</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Purchase Order -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">3</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Create Purchase Order</h4>
                                    <p>Place orders with suppliers:</p>
                                    <ul>
                                        <li>Go to <strong>Purchase Order → Add</strong></li>
                                        <li>Select supplier and order date</li>
                                        <li>Add items and quantities needed</li>
                                        <li>Set expected delivery date</li>
                                        <li>Save and send to supplier</li>
                                        <li>Convert to purchase bill when goods received</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Supplier Payment -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">4</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Make Supplier Payments</h4>
                                    <p>Record payments made to suppliers:</p>
                                    <ul>
                                        <li>Navigate to <strong>Supplier Payment → Add Payment</strong></li>
                                        <li>Select supplier</li>
                                        <li>Choose purchase bills to pay</li>
                                        <li>Enter payment amount and date</li>
                                        <li>Select payment mode</li>
                                        <li>Save payment record</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="quick-tips">
                            <h5><i class="fas fa-lightbulb me-2"></i>Purchase Tips</h5>
                            <ul>
                                <li>Use purchase orders to track pending orders</li>
                                <li>Purchase bills automatically update your inventory</li>
                                <li>Track supplier payment due dates to manage cash flow</li>
                                <li>Use purchase returns for defective or returned goods</li>
                                <li>Take advantage of batch/lot tracking for inventory items</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Inventory Section -->
    <div class="tab-pane fade" id="inventory" role="tabpanel">
        <section class="tutorial-section">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center mb-5">
                        <i class="fas fa-warehouse feature-icon"></i>
                        <h2 class="mb-3">Inventory Management</h2>
                        <p class="lead">Track stock levels, manage warehouses, and control inventory</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-10 offset-lg-1">
                        <!-- Stock Tracking -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">1</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Enable Stock Tracking</h4>
                                    <p>Set up inventory tracking for items:</p>
                                    <ul>
                                        <li>Go to <strong>Items → Edit Item</strong></li>
                                        <li>Enable "Track Stock" option</li>
                                        <li>Set opening stock quantity</li>
                                        <li>Set low stock alert level</li>
                                        <li>Save the item settings</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Stock Adjustment -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">2</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Stock Adjustment</h4>
                                    <p>Adjust inventory for discrepancies:</p>
                                    <ul>
                                        <li>Navigate to <strong>Stock Adjust → Add</strong></li>
                                        <li>Select item and warehouse/location</li>
                                        <li>Enter adjustment type (Increase/Decrease)</li>
                                        <li>Enter quantity difference</li>
                                        <li>Add reason for adjustment</li>
                                        <li>Save the adjustment</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Stock Transfer -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">3</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Stock Transfer</h4>
                                    <p>Transfer stock between locations:</p>
                                    <ul>
                                        <li>Go to <strong>Stock Transfer → Add</strong></li>
                                        <li>Select "From" location (source warehouse)</li>
                                        <li>Select "To" location (destination warehouse)</li>
                                        <li>Add items and quantities to transfer</li>
                                        <li>Enter transfer date</li>
                                        <li>Save the transfer record</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- View Stock Reports -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">4</div>
                                <div class="step-content flex-grow-1">
                                    <h4>View Stock Reports</h4>
                                    <p>Monitor your inventory levels:</p>
                                    <ul>
                                        <li>Go to <strong>Reports → Inventory Reports</strong></li>
                                        <li>View current stock levels</li>
                                        <li>Check low stock alerts</li>
                                        <li>View stock movement history</li>
                                        <li>Export reports for analysis</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="quick-tips">
                            <h5><i class="fas fa-lightbulb me-2"></i>Inventory Tips</h5>
                            <ul>
                                <li>Set low stock alerts to avoid stockouts</li>
                                <li>Regular stock audits help maintain accurate inventory</li>
                                <li>Use batch/lot numbers for items with expiry dates</li>
                                <li>Stock transfers help manage multi-location inventory</li>
                                <li>Review stock reports regularly to optimize inventory levels</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

