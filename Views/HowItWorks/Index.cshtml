        <section class="tutorial-section">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center mb-5">
                        <i class="fas fa-university feature-icon"></i>
                        <h2 class="mb-3">Accounts & Banking</h2>
                        <p class="lead">Manage your accounts, bank transactions, and financial records</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-10 offset-lg-1">
                        <!-- Chart of Accounts -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">1</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Set Up Chart of Accounts</h4>
                                    <p>Organize your accounting structure:</p>
                                    <ul>
                                        <li>Go to <strong>Accounts → Chart of Accounts</strong></li>
                                        <li>Create account types (Assets, Liabilities, Income, Expenses)</li>
                                        <li>Add account sub-types as needed</li>
                                        <li>Create individual accounts under each category</li>
                                        <li>Set account codes for easy identification</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Add Bank Account -->
                        <div class="step-card">
                            <div class="d-flex align-items-start">
                                <div class="step-number">2</div>
                                <div class="step-content flex-grow-1">
                                    <h4>Add Bank Account</h4>
                                    <p>Register your bank accounts:</p>
                                    <ul>
                                        <li>Navigate to <strong>Banking → Add Bank</strong></li>
                                        <li>Enter bank name and account number</li>
                                        <li>Enter IFSC code and branch details</li>
