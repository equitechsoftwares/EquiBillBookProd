<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.22/pdfmake.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>

<script>
    var EnableSound = Cookies.get('aSystemSetting').split('&')[4].split('=')[1];

    if (sessionStorage.getItem("showMsg") == '1') {
        interval = setInterval(playSound, 500);
    }

    function playSound() {
        if (EnableSound == 'True') { document.getElementById('success').play(); }
        toastr.success(sessionStorage.getItem("Msg"));
        sessionStorage.removeItem("showMsg");
        sessionStorage.removeItem("Msg");
        clearInterval(interval);
    }

    function PaymentSuccess(TransactionNo) {
        if (confirm("I acknowledge that i have received the payment from the client & i understand that i will be charged for this in my next billing month") == true) {
            var det = {
                TransactionNo: TransactionNo,
                LiveTransactionId: '',
                PaymentGatewayType: 'Offline',
                PaymentMethodType: ''
            };
            $("#divLoading").show();
            $.ajax({
                url: '/adminUser/PaymentSuccess',
                datatype: "json",
                data: det,
                type: "post",
                success: function (data) {
                    if (data.Status == 0) {
                        if (EnableSound == 'True') { document.getElementById('error').play(); }
                        toastr.error(data.Message);
                    }
                    else {
                        window.location.href = "/adminUser/success?invoiceid=" + data.Data.Transaction.TransactionNo;
                    }
                    $("#divLoading").hide();
                },
                error: function (xhr) {
                    $("#divLoading").hide();
                }
            });
        }
    }

    function printInvoice() {
        //$('.noPrint').css('display', 'none');
        //$('.content-wrapper').css('background-color', '#fff');
        window.print();
        //$('.noPrint').css('display', 'block');
        //$('.content-wrapper').css('background-color', '#f4f6f9');
    }

    function exportInvoiceToPdf() {
        $('.hidden').show();
        $('.hide').hide();
        $('.responsive-table').css('height', '100%');
        html2canvas($('.printableArea')[0], {
            onrendered: function (canvas) {
                var data = canvas.toDataURL();
                var docDefinition = {
                    content: [{
                        image: data,
                        width: 500
                    }]
                };

                pdfMake.createPdf(docDefinition).download("Invoice.pdf");
                $('.responsive-table').css('height', '400px');
                $('.hide').show();
                $('.hidden').hide();
            }
        });
    }

    function openSpecialDiscount(TransactionNo) {
        var det = {
            TransactionNo: TransactionNo,
        };
        $("#divLoading").show();
        $.ajax({
            url: '/adminUser/CheckMaxSpecialDiscount',
            datatype: "json",
            data: det,
            type: "post",
            success: function (data) {
                if (data.Status == 0) {
                    if (EnableSound == 'True') { document.getElementById('error').play(); }
                    toastr.error(data.Message);
                }
                else {
                    $('#divPayablePrice').text('Payable Price: ' + data.Data.Transaction.CurrencySymbol + data.Data.Transaction.PayableCost);
                    $('#divMinPrice').text('Min Price: ' + data.Data.Transaction.CurrencySymbol + data.Data.Transaction.MinPrice);
                    $('#divSpecialDiscount').text('Max Discount: ' + data.Data.Transaction.CurrencySymbol + data.Data.Transaction.SpecialDiscount);
                    $('#SpecialDiscount').modal('toggle');
                }
                $("#divLoading").hide();
            },
            error: function (xhr) {
                $("#divLoading").hide();
            }
        });
    }

    function UpdateSpecialDiscount() {
        var det = {
            TransactionNo: window.location.href.split('=')[1],
            SpecialDiscount: $('#txtSpecialDiscount').val()
        };
        $("#divLoading").show();
        $.ajax({
            url: '/adminUser/UpdateSpecialDiscount',
            datatype: "json",
            data: det,
            type: "post",
            success: function (data) {
                if (data.Status == 0) {
                    if (EnableSound == 'True') { document.getElementById('error').play(); }
                    toastr.error(data.Message);
                }
                else {
                    $('#SpecialDiscount').modal('toggle');
                    sessionStorage.setItem('showMsg', '1');
                    sessionStorage.setItem('Msg', data.Message);
                    window.location.reload();
                }
                $("#divLoading").hide();
            },
            error: function (xhr) {
                $("#divLoading").hide();
            }
        });
    }

</script>