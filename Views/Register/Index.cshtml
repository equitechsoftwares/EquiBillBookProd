<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="@ViewBag.BusinessSetting.ParentWebsiteUrl"><img src="@ViewBag.BusinessSetting.BusinessLogo" style=" width: 222px; display: block; margin-left: auto; margin-right: auto;" /></a>
        </div>
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div id="google_translate_element" style="margin-left:auto;padding:20px 20px 0 0;"></div>
            <div class="card-body login-card-body divRegister">
                @*<img src="~/Content/web-assets/images/logo2.png" style=" width: 200px; display: block; margin-left: auto; margin-right: auto;" />*@
                @*<br />*@

                <p class="login-box-msg">Register to start your session</p>
                <div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Name" id="txtName">
                        <div class="input-group-append">
                            <div class="input-group-text p-0" style="border-left: 1px solid #ced4da;">
                                @*<span class="fas fa-user"></span>*@
                            </div>
                        </div>
                        @*<div class="input-group-append ml-0">
                                <div class="input-group-text" style="border-left: 1px solid #ced4da;">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>*@
                    </div>

                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="Email Id" id="txtEmailId">
                        <div class="input-group-append ">
                            <div class="input-group-text p-0" style="border-left: 1px solid #ced4da;">
                                @*<span class="fas fa-envelope"></span>*@
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3" style="display:none">
                        <select class="form-control select2" id="ddlCountry" onchange="fetchDialingCode()">
                            <option value="0" selected disabled>Select Country</option>
                            @foreach (var item in ViewBag.Countrys)
                            {
                                @*<option value="@item.CountryId">@item.Country - @item.CurrencyName (@item.CurrencyCode) </option>*@
                                <option value="@item.CountryId">@item.Country </option>
                            }
                        </select>
                        @*<div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-flag"></span>
                                </div>
                            </div>*@
                    </div>
                    <div class="input-group mb-3 divCurrency" style="display:none">

                    </div>

                    <div class="input-group mb-3 divTimeZone" style="display:none">

                    </div>

                    <div class="input-group mb-3" id="p_States_Dropdown" style="display:none">
                        @Html.Partial("PartialStatesDropdown")
                    </div>

                    <div class="mb-3">
                        <!-- text input -->
                        <div class="form-group">
                            <div class="input-group">
                                @*<span class="input-group-append divDialingCode" style="display:none">
                                        <a href="javascript:void(0)" class="btn bg-gray-light lblDialingCode"> +xx </a>
                                    </span>*@
                                <input type="text" class="form-control" placeholder="Mobile No" id="txtMobileNo" onkeypress="return onlyNumberKey(event)" maxlength="10">
                                <div class="input-group-append ">
                                    <div class="input-group-text p-0" style="border-left: 1px solid #ced4da;">
                                        @*<span class="fas fa-phone"></span>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Password" id="txtPassword">
                        <div class="input-group-append ">
                            <div class="input-group-text p-0" style="border-left: 1px solid #ced4da;">
                                @*<span class="fas fa-lock"></span>*@
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Confirm Password" id="txtCPassword">
                        <div class="input-group-append ">
                            <div class="input-group-text p-0" style="border-left: 1px solid #ced4da;">
                                @*<span class="fas fa-lock"></span>*@
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <div class="icheck-primary" style="margin-top:0 !important;margin-bottom:0 !important">
                            <input type="checkbox" id="chkIsBusinessRegistered" onchange="toggleBusinessRegistrationType()">
                            <label for="chkIsBusinessRegistered">
                                Is your Business Registered?
                            </label>
                        </div>
                    </div>
                    <div class="input-group mb-3 divBusinessRegistrationType" style="display:none;">
                        <select class="form-control select2" id="ddlBusinessRegistrationType" style="width:100%;">
                            <option disabled selected value="0">Business Registration Type</option>
                            <option value="Regular">Regular Scheme</option>
                            <option value="Composition">Composition Scheme</option>
                        </select>
                        @*<div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-flag"></span>
                                </div>
                            </div>*@
                    </div>
                    @*<div class="input-group mb-3">
                            <select class="form-control" id="ddl" >
                                <option value="0" disabled selected>Industry Type</option>
                                <option value="Pen and Paper">Arts And Design </option>
                                <option value="Busy">Automotive </option>
                                <option value="Others">Others</option>
                            </select>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-flag"></span>
