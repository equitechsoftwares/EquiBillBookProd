                                <option value="Pen and Paper">Retailer </option>
                                <option value="Busy">Wholesaler  </option>
                                <option value="Others">Distributor </option>
                            </select>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-flag"></span>
                                </div>
                            </div>
                        </div>*@
                    <div class="input-group mb-3">
                        <select class="form-control select2" id="ddlCompetitor">
                            <option value="0" selected disabled>How do you make Bills currently?</option>
                            @foreach (var item in ViewBag.Competitors)
                            {
                                <option value="@item.CompetitorId">@item.Name</option>
                            }
                        </select>
                        @*<div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-pen"></span>
                                </div>
                            </div>*@
                    </div>

                    @*<div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="Business Name" id="txtBusinessName">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="Main Branch Name" id="txtBranch">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>*@
                    <div class="row">
                        @*<div class="col-8">
                                <div class="icheck-primary">
                                    <input type="checkbox" id="chkIsRememberMe">
                                    <label for="chkIsRememberMe">
                                        Remember Me
                                    </label>
                                </div>
                            </div>*@
                        <div class="col-8">
                            <a href="/login" class="" onclick="login()">I already have an account</a>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <a href="javascript:void(0)" class="btn btn-primary btn-block" onclick="RegisterOtp()">Register</a>
                        </div>
                        <!-- /.col -->
                    </div>
                    @*<p class="mb-0">
                            <a href="/login" class="" onclick="login()">I already have a membership</a>
                        </p>*@
                </div>

                <!-- /.social-auth-links -->
                @*<p class="mb-1">
                        <a href="/login">Login In</a>
                    </p>*@

            </div>

            <div class="card-body login-card-body divOtp hidden">
                @*<img src="~/Content/assets/img/logo.png" style=" width: 200px; display: block; margin-left: auto; margin-right: auto;" />
                    <br />*@
                <p class="login-box-msg lblOtp"></p>

                <div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Otp" id="txtOtp" maxlength="4">
                        @*<div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-key"></span>
                                </div>
                            </div>*@
                    </div>
                    <label id="timer" style="font-size:1.2rem;text-align:center;display:block">
                    </label>
                    <p class="login-box-msg text-bg-info">Make sure to check your spam folder</p>
                    <div class="mt-2 mb-2 divResend" style="text-align:center;display:none" id="">
                        <a href="javascript:void(0)" onclick="RegisterOtp()" class="text-danger font-weight-bold">Resend one time password</a>
                    </div>
                    <div class="row">

                        <div class="col-8">
                            <a href="javascript:void(0)" class="" onclick="previous()">Entered a wrong Email Id?</a>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <a href="javascript:void(0)" class="btn btn-primary btn-block" onclick="register()">Submit</a>
                        </div>
                        <!-- /.col -->
                    </div>
                </div>

                <!-- /.social-auth-links -->
                @*<p class="mb-1">
                        <a href="/login">Login In</a>
                    </p>*@

            </div>
            <!-- /.login-card-body -->
        </div>
    </div>

    <!-- /.login-box -->

    <div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px; top: 0px; width: 100%; height: 100%; z-index: 30001; opacity: 0.8;display:none">
        <div class="overlay-wrapper">
            <div class="overlay"><i class="fas fa-3x fa-sync-alt fa-spin"></i><div class="text-bold pt-2">Loading...</div></div>
        </div>
    </div>

    <audio id="error"><source src="~/Content/Audio/error.mp3"></audio>

    <!-- jQuery -->
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="~/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <!-- Toastr -->
    <script src="~/Content/plugins/toastr/toastr.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/assets/js/adminlte.min.js"></script>
    <!-- Select2 -->
    <script src="~/Content/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/Content/JQuery/Customer/Common/Common.js"></script>
    <script src="~/Content/JQuery/Customer/Authentication/Register.js"></script>

    @*<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>

    <script type="text/javascript">
        var googtrans = Cookies.get('googtrans');
        if (!googtrans) {
            Cookies.set('googtrans', '/auto/en');
        }
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({ pageLanguage: '' }, 'google_translate_element');
        }
    </script>
