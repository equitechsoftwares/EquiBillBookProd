@{
    ViewBag.Title = "SEO Settings Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>SEO Settings Management</h1>
                <div class="float-left">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admindashboard/index">Dashboard</a></li>
                        <li class="breadcrumb-item active">SEO Settings</li>
                    </ol>
                </div>
            </div>
            <div class="col-sm-6">
                <a href="/adminsettings/seosettingsadd" class="btn btn-primary float-sm-right">
                    <i class="fas fa-plus"></i> Add New SEO Settings
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Page SEO Settings</h3>
                    </div>
                    <div class="card-body">
                        <table id="tblSeoSettings" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Page Identifier</th>
                                    <th>Page Title</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.SeoSettings != null)
                                {
                                    foreach (var item in ViewBag.SeoSettings)
                                    {
                                        <tr>
                                            <td>@item.PageIdentifier</td>
                                            <td>@(item.PageTitle ?? "-")</td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="/adminsettings/seosettingsedit/@item.PageSeoSettingsId" class="btn btn-info btn-sm">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <button type="button" class="btn btn-danger btn-sm" onclick="deleteSeoSettings(@item.PageSeoSettingsId)">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Fix DataTables length dropdown and search input borders */
    .dataTables_wrapper .dataTables_length select {
        border: 1px solid #ced4da !important;
        border-radius: 0.25rem;
        padding: 0.375rem 1.75rem 0.375rem 0.75rem;
    }
    
    .dataTables_wrapper .dataTables_filter input {
        border: 1px solid #ced4da !important;
        border-radius: 0.25rem;
        padding: 0.375rem 0.75rem;
    }
    
    .dataTables_wrapper .dataTables_filter input:focus {
        border-color: #80bdff !important;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    
    .dataTables_wrapper .dataTables_length select:focus {
        border-color: #80bdff !important;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
</style>

<script src="~/Content/JQuery/Admin/SeoSettings.js"></script>

