
@{
    ViewBag.Title = Request.Cookies["adata"].Value.Split('&')[8].Split('=')[1] + " | Edit Bank Account";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Payment Method</h1>
                <div class="float-left">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admindashboard/index">Dashboard</a></li>
                        <li class="breadcrumb-item active">Edit Payment Method</li>
                    </ol>
                </div>
            </div>
            <div class="col-md-6 col-12 d-flex align-items-center justify-content-start justify-content-md-end mt-1 mt-md-0">
                @*<a id="btnBack" href="/accounts/index" class="btn btn-warning float-sm-right"><i class="fas fa-arrow-left"></i> Back</a>*@
                @*<a href="javascript:void(0)" data-toggle="modal" data-target="#faqModal" class="btn btn-secondary float-sm-right mr-2">FAQs</a>*@
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                @*<div class="callout callout-info @(Request.Cookies["SystemSetting"].Value.Split('&')[0].Split('=')[1] == "True" ? "":"hidden")">
                        <h5><i class="fas fa-info"></i> Note:</h5>
                        This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.
                    </div>*@
                <!-- jquery validation -->
                <div class="card card-primary card-outline">

                    <!-- form start -->
                    <div id="quickForm">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Payment Method <span class="danger">*</span></label>
                                        <div class="input-group">
                                            <select class="form-control select2" @(ViewBag.IsShow == true ? "" : "disabled") id="ddlPaymentMethod" onchange="togglePaymentMethod()">
                                                @{
                                                    <option value="0" selected>Select</option>
                                                    if (ViewBag.ResellerPaymentMethod.PaymentMethod == 1)
                                                    {
                                                        <option value="1" selected>Bank Account</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="1">Bank Account</option>
                                                    }
                                                    if (ViewBag.ResellerPaymentMethod.PaymentMethod == 2)
                                                    {
                                                        <option value="2" selected>UPI ID</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="2">UPI ID</option>
                                                    }
                                                    if (ViewBag.ResellerPaymentMethod.PaymentMethod == 3)
                                                    {
                                                        <option value="3" selected>GPAY</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="3">GPAY</option>
                                                    }
                                                    if (ViewBag.ResellerPaymentMethod.PaymentMethod == 4)
                                                    {
                                                        <option value="4" selected>PhonePe</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="4">PhonePe</option>
                                                    }
                                                    if (ViewBag.ResellerPaymentMethod.PaymentMethod == 5)
                                                    {
                                                        <option value="5" selected>Paytm</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="5">Paytm</option>
                                                    }
                                                    if (ViewBag.ResellerPaymentMethod.PaymentMethod == 6)
                                                    {
                                                        <option value="6" selected>Paypal</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="6">Paypal</option>
                                                    }
                                                }
                                            </select>
                                            @*<span class="input-group-append">
                                <a href="javascript:void(0)" class="btn btn-info" data-toggle="modal" data-target="#categoryModal">+ </a>
                            </span>*@
                                        </div>
                                        <small class="text-red font-weight-bold errorText" id="divPaymentMethod"></small>
                                    </div>
                                </div>

                                <div class="col-sm-3 divBank @(ViewBag.ResellerPaymentMethod.PaymentMethod == 1 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Bank Name</label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="text" class="form-control" id="txtBankName" placeholder="" value="@ViewBag.ResellerPaymentMethod.BankName">
                                        <small class="text-red font-weight-bold errorText" id="divBankName"></small>
                                    </div>
                                </div>
                                <div class="col-sm-3 divBank @(ViewBag.ResellerPaymentMethod.PaymentMethod == 1 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Branch Name</label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="text" class="form-control" id="txtBranchName" placeholder="" value="@ViewBag.ResellerPaymentMethod.BranchName">
                                        <small class="text-red font-weight-bold errorText" id="divBranchName"></small>
                                    </div>
                                </div>
                                <div class="col-sm-3 divBank @(ViewBag.ResellerPaymentMethod.PaymentMethod == 1 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Branch Code</label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="text" class="form-control" id="txtBranchCode" placeholder="" value="@ViewBag.ResellerPaymentMethod.BranchCode">
                                        <small class="text-red font-weight-bold errorText" id="divBranchCode"></small>
                                    </div>
                                </div>
                                <div class="col-sm-3 divBank @(ViewBag.ResellerPaymentMethod.PaymentMethod == 1 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Account Number <span class="danger">*</span></label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="number" class="form-control" id="txtAccountNumber" placeholder=""
                                               value="@ViewBag.ResellerPaymentMethod.AccountNumber" onkeypress="return onlyNumberKey(event)">
                                        <small class="text-red font-weight-bold errorText" id="divAccountNumber"></small>
                                    </div>
                                </div>
                                <div class="col-sm-3 divBank @(ViewBag.ResellerPaymentMethod.PaymentMethod == 1 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Account Holder </label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="text" class="form-control" id="txtAccountHolder" placeholder=""
                                               value="@ViewBag.ResellerPaymentMethod.AccountHolder">
                                        <small class="text-red font-weight-bold errorText" id="divAccountHolder"></small>
                                    </div>
                                </div>
                                <div class="col-sm-3 divBank @(ViewBag.ResellerPaymentMethod.PaymentMethod == 1 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>IFSC CODE </label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="text" class="form-control" id="txtIFSC" placeholder=""
                                               value="@ViewBag.ResellerPaymentMethod.IFSC">
                                        <small class="text-red font-weight-bold errorText" id="divIFSC"></small>
                                    </div>
                                </div>
                                <div class="col-sm-3 divBank @(ViewBag.ResellerPaymentMethod.PaymentMethod == 1 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Bank Address </label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="text" class="form-control" id="txtBankAddress" placeholder=""
                                               value="@ViewBag.ResellerPaymentMethod.BankAddress">
                                        <small class="text-red font-weight-bold errorText" id="divBankAddress"></small>
                                    </div>
                                </div>
                                <div class="col-sm-3 divBank @(ViewBag.ResellerPaymentMethod.PaymentMethod == 1 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Swift BIC </label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="text" class="form-control" id="txtSwiftBIC" placeholder=""
                                               value="@ViewBag.ResellerPaymentMethod.SwiftBIC">
                                        <small class="text-red font-weight-bold errorText" id="divSwiftBIC"></small>
                                    </div>
                                </div>
                                <div class="col-sm-3 divUpiID @(ViewBag.ResellerPaymentMethod.PaymentMethod == 2 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>UPI ID <span class="danger">*</span></label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="text" class="form-control" id="txtUpiID" placeholder=""
                                               value="@ViewBag.ResellerPaymentMethod.UpiID">
                                        <small class="text-red font-weight-bold errorText" id="divUpiID"></small>
                                    </div>
                                </div>
                                <div class="col-sm-3 divGpay @(ViewBag.ResellerPaymentMethod.PaymentMethod == 3 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>GPAY <span class="danger">*</span></label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="text" class="form-control" id="txtGpay" placeholder=""
                                               value="@ViewBag.ResellerPaymentMethod.Gpay">
                                        <small class="text-red font-weight-bold errorText" id="divGpay"></small>
                                    </div>
                                </div>
                                <div class="col-sm-3 divPhonePe @(ViewBag.ResellerPaymentMethod.PaymentMethod == 4 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>PhonePe <span class="danger">*</span></label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="text" class="form-control" id="txtPhonePe" placeholder=""
                                               value="@ViewBag.ResellerPaymentMethod.PhonePe">
                                        <small class="text-red font-weight-bold errorText" id="divPhonePe"></small>
                                    </div>
                                </div>
                                <div class="col-sm-3 divPaytm @(ViewBag.ResellerPaymentMethod.PaymentMethod == 5 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Paytm <span class="danger">*</span></label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="text" class="form-control" id="txtPaytm" placeholder=""
                                               value="@ViewBag.ResellerPaymentMethod.Paytm">
                                        <small class="text-red font-weight-bold errorText" id="divPaytm"></small>
                                    </div>
                                </div>
                                <div class="col-sm-3 divPaypal @(ViewBag.ResellerPaymentMethod.PaymentMethod == 6 ? "":"hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Paypal <span class="danger">*</span></label>
                                        <input @(ViewBag.IsShow == true ? "" : "disabled") type="text" class="form-control" id="txtPaypal" placeholder=""
                                               value="@ViewBag.ResellerPaymentMethod.Paypal">
                                        <small class="text-red font-weight-bold errorText" id="divPaypal"></small>
                                    </div>
                                </div>
                                @*<div class="col-sm-3">
                    <div class="form-group">
                        <label>Notes </label>
                        <input type="text" class="form-control" id="txtNotes" placeholder="" value="@ViewBag.ResellerPaymentMethod.Notes">
                    </div>
                </div>*@
                            </div>

                        </div>
                        <!-- /.card-body -->
                        @if (ViewBag.IsShow == true)
                        {
                            <div class="card-footer">
                                <button id="btnUpdate" type="submit" class="btn btn-primary float-right" onclick="updateResellerPaymentMethod(1)"><i class="fas fa-edit"></i> Update</button>
                                @*<a id="btnBack" href="/accounts/index" class="btn btn-warning float-sm-right mr-2"><i class="fas fa-arrow-left"></i> Back</a>*@
                            </div>
                        }

                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<script src="~/Content/JQuery/admin/PaymentMethod.js"></script>
