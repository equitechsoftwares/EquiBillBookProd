
@{
    ViewBag.Title = Request.Cookies["adata"].Value.Split('&')[8].Split('=')[1] + " | Change Login Email";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Change Login Email</h1>
                <div class="float-left">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admindashboard/index">Dashboard</a></li>
                        <li class="breadcrumb-item active">Change Login Email</li>
                    </ol>
                </div>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                @*<div class="callout callout-info @(Request.Cookies["SystemSetting"].Value.Split('&')[0].Split('=')[1] == "True" ? "":"hidden")">
                        <h5><i class="fas fa-info"></i> Note:</h5>
                        This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.
                    </div>*@
                <!-- jquery validation -->
                <div class="card card-primary card-outline">
                    @*<div class="card-header">
                            <h3 class="card-title">Change Password</h3>
                        </div>*@
                    <!-- /.card-header -->
                    <!-- form start -->
                    <div id="quickForm" class="divEmail ">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="txtCurrentEmailId">Registered Email Id</label>
                                        <input type="text" name="password" disabled class="form-control" id="txtCurrentEmailId" value="@ViewBag.User.EmailId">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="txtEmailId">New Email Id <span class="danger">*</span></label>
                                        <input type="text" name="password" class="form-control" id="txtEmailId" placeholder="">
                                        <small class="text-red font-weight-bold errorText" id="divEmailId"></small>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="txtCEmailId">Confirm New Email Id <span class="danger">*</span></label>
                                        <input type="text" name="password" class="form-control" id="txtCEmailId" placeholder="">
                                        <small class="text-red font-weight-bold errorText" id="divCEmailId"></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button id="btnUpdate" type="submit" class="btn btn-primary float-right" onclick="sendOtp()">Send Otp</button>
                        </div>
                    </div>
                    @*<div class="card-header">
                            <h3 class="card-title">A one time password has been sent to equitechsoftwaresj@gmail.com</h3>
                        </div>*@
                    <div id="quickForm" class="divEmailOtp hidden">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="txtCurrentEmailId">Otp</label>
                                        <input type="password" name="password" class="form-control" id="txtOtp">
                                        <small class="text-red font-weight-bold errorText" id="divOtp"></small>
                                    </div>
                                </div>

                            </div>
                            <p id="lblOtpSuccessMsg"></p>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">

                            <button id="btnUpdate" type="submit" class="btn btn-primary float-right" onclick="changeEmailId()">Submit</button>
                            <button id="btnUpdate" type="button" class="btn btn-warning float-right mr-2" onclick="back()">Entered a wrong email id?</button>
                        </div>
                    </div>

                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<script src="~/Content/JQuery/Admin/ChangeLoginEmail.js"></script>