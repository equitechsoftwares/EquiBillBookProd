

@{
    var count = 1;
    <thead id="thead">
        <tr>
            <th>Sln</th>
            <th>Item</th>
            <th>Sku</th>
            <th>Business Location</th>
            @if (ViewBag.PurchasePermission.IsView == true)
            {
                <th>Purchase Date</th>
                <th>Purchase Invoice No</th>
            }
            @if (ViewBag.ItemSetting.EnableLotNo == true)
            {
                <th>Lot No</th>
            }

            @if (ViewBag.PurchasePermission.IsView == true)
            {
                <th>Supplier Name</th>
                <th>Supplier Mobile No</th>
                @*<th>Purchase Inc Tax</th>*@
            }
            <th>Sales Date</th>
            <th>Invoice No</th>
            <th>Customer Name</th>
            <th>Customer Mobile No</th>
            <th>Quantity</th>
            <th>Sales Inc Tax</th>
            @*<th>Discount</th>*@
            <th>Amount</th>
        </tr>
    </thead>
    <tbody class="table-body">
        @foreach (var item in ViewBag.SalesDetails)
        {
            <tr>
                <td>@(ViewBag.PageSize * (ViewBag.PageIndex - 1) + count)</td>
                <td>
                    @if (ViewBag.ItemsPermission.IsView)
                    {
                        <a href="javascript:void(0)" onclick="ViewItem(@item.ItemId)">
                            @item.ItemName
                            @if (item.VariationDetails != null && item.VariationDetails != "")
                            {
                                <span>- @item.VariationDetails;</span>
                            }
                        </a>
                    }
                    else
                    {
                        @item.ItemName
                        if (item.VariationDetails != null && item.VariationDetails != "")
                        {
                            <span>- @item.VariationDetails;</span>
                        }
                    }

                </td>
                <td>
                    @if (ViewBag.ItemsPermission.IsView)
                    {
                        <a href="javascript:void(0)" onclick="ViewItem(@item.ItemId)">@item.SKU</a>
                    }
                    else
                    {
                        @item.SKU
                    }
                </td>
                <td>
                    @if (ViewBag.BranchPermission.IsView)
                    {
                        <a href="javascript:void(0)" onclick="ViewBranch(@item.BranchId)">@item.BranchName</a>
                    }
                    else
                    {
                        @item.BranchName
                    }
                </td>
                @if (ViewBag.PurchasePermission.IsView == true)
                {
                    <td>@(item.PurchaseDate == null ? "" : item.PurchaseDate.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1] + " " + Request.Cookies["BusinessSetting"].Value.Split('&')[1].Split('=')[1]))</td>
                    <td>
                        @if (item.Type == "Purchase")
                        {
                            if (ViewBag.PurchasePermission.IsView)
                            {
                                <a href="javascript:void(0)" onclick="ViewPurchase(@item.PurchaseId)">@item.PurchaseInvoiceNo</a>
                            }
                            else
                            {
                                @item.PurchaseInvoiceNo
                            }
                        }
                        else if (item.Type == "Stock Transfer")
                        {
                            if (ViewBag.StockTransferPermission.IsView)
                            {
                                <a href="javascript:void(0)" onclick="ViewStockTransfer(@item.PurchaseId)">@item.PurchaseInvoiceNo</a>
                            }
                            else
                            {
                                @item.PurchaseInvoiceNo
                            }
                        }
                        else
                        {
                            @item.PurchaseInvoiceNo
                        }

                    </td>
                }
                @if (ViewBag.ItemSetting.EnableLotNo == true)
                {
                    <td>@item.LotNo</td>
                }
                @if (ViewBag.PurchasePermission.IsView == true)
                {
                    <td>
                        @if (ViewBag.SuppliersPermission.IsView)
                        {
                            <a href="javascript:void(0)" onclick="ViewSupplier(@item.SupplierId)">@item.SupplierName</a>
                        }
                        else
                        {
                            @item.SupplierName
                        }
                    </td>
                    <td>
                        @if (ViewBag.SuppliersPermission.IsView)
                        {
                            <a href="javascript:void(0)" onclick="ViewSupplier(@item.SupplierId)">@item.SupplierMobileNo</a>
                        }
                        else
                        {
                            @item.SupplierMobileNo
                        }
                    </td>
                    @*<td>
                        @{
                            if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                            {
                                @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", item.PurchaseIncTax))
                            }
                            else
                            {
                                @(String.Format("{0:0.##}", item.PurchaseIncTax))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                            }
                        }
                    </td>*@
                }
                <td>@(item.SalesDate == null ? "" : item.SalesDate.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1] + " " + Request.Cookies["BusinessSetting"].Value.Split('&')[1].Split('=')[1]))</td>
                <td>
                    @if (ViewBag.SalesPermission.IsView)
                    {
                        <a href="javascript:void(0)" onclick="ViewSale(@item.SalesId)">@item.InvoiceNo</a>
                    }
                    else
                    {
                        @item.InvoiceNo
                    }
                </td>
                <td>
                    @if (ViewBag.CustomersPermission.IsView)
                    {
                        <a href="javascript:void(0)" onclick="ViewCustomer(@item.CustomerId)">@item.CustomerName</a>
                    }
                    else
                    {
                        @item.CustomerName
                    }
                </td>
                <td>
                    @if (ViewBag.CustomersPermission.IsView)
                    {
                        <a href="javascript:void(0)" onclick="ViewCustomer(@item.CustomerId)">@item.CustomerMobileNo</a>
                    }
                    else
                    {
                        @item.CustomerMobileNo
                    }
                </td>
                <td>
                    @(String.Format("{0:0.##}", item.Quantity+ item.FreeQuantity))
                    @*@if (item.FreeQuantity != 0)
                        {
                            <span> + @(String.Format("{0:0.##}", item.FreeQuantity))</span>
                        }*@
                    @item.UnitName
                </td>
                <td>
                    @{
                        if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                        {
                            @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", item.SalesIncTax))
                        }
                        else
                        {
                            @(String.Format("{0:0.##}", item.SalesIncTax))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                        }
                    }
                </td>
                @*<td>
                    @{
                        if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                        {
                            @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", item.Discount))
                        }
                        else
                        {
                            @(String.Format("{0:0.##}", item.Discount))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                        }
                    }
                </td>*@
                <td>
                    @{
                        if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                        {
                            @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", item.AmountIncTax))
                        }
                        else
                        {
                            @(String.Format("{0:0.##}", item.AmountIncTax))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                        }
                    }
                </td>
            </tr>
            count++;
        }
    </tbody>
