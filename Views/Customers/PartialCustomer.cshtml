                {
                    <i tabindex="0" class="fa fa-info-circle text-info hover-q no-print" role="button" data-toggle="popover" data-trigger="focus" title="" data-content="Available: @(String.Format("{0:0.##}",item.CreditLimit - item.TotalSalesDue))"></i>
                    @*<br />
                    <small class="danger">Available: @(String.Format("{0:0.##}",item.CreditLimit - item.TotalSalesDue)) </small>*@
                }
            </td>
            <td>
                @(String.Format("{0:0.##}", item.OpeningBalance))
                @if (item.OpeningBalance > 0)
                {
                    <i tabindex="0" class="fa fa-info-circle text-info hover-q no-print" role="button" data-toggle="popover" data-trigger="focus" title="" data-content="Due: @(String.Format("{0:0.##}",item.OpeningBalance - item.CustomerOpeningBalancePaid))"></i>
                    @*<br />
                    <small class="danger">Due: @(String.Format("{0:0.##}",item.OpeningBalance - item.CustomerOpeningBalancePaid)) </small>*@
                }
            </td>
                <td>
                    @if (item.AdvanceBalance > 0)
                    {
                        <a href="javascript:void(0)" onclick="ViewUnusedAdvanceBalance(@item.UserId)">@(String.Format("{0:0.##}", item.AdvanceBalance))</a>
                    }
                    else
                    {
                        <span>@(String.Format("{0:0.##}", item.AdvanceBalance))</span>
                    }
                </td>
                <td>
                    <a href="/salesreports/salesdetailsbycustomer?CustomerId=@item.UserId&CustomerName=@item.Name&Page=customers">
                        @(String.Format("{0:0.##}", item.TotalSales))
                    </a>
                </td>
                @*<td>
                        @(String.Format("{0:0.##}", item.TotalSalesPaid))
                    </td>*@
                <td>
                    <a href="/salesreports/salesdetailsbycustomer?CustomerId=@item.UserId&CustomerName=@item.Name&PaymentStatus=due&Page=customers">
                        @(String.Format("{0:0.##}", item.TotalSalesDue))
                    </a>
                </td>
                @*<td>
                        <a href="/salesreports/salesreturndetailsbycustomer?CustomerId=@item.UserId&CustomerName=@item.Name&Page=customers">
                            @(String.Format("{0:0.##}", item.TotalSalesReturn))
                        </a>
                    </td>
                    <td>
                        <a href="/salesreports/salesreturndetailsbycustomer?CustomerId=@item.UserId&CustomerName=@item.Name&PaymentStatus=due&Page=customers">
                            @(String.Format("{0:0.##}", item.TotalSalesReturnDue))
                        </a>
                    </td>*@
                @*<td>0</td>*@
                <td class="hidden">@(item.IsActive==true?"Active":"Inactive")</td>
                <td class="hide">
                    @if (item.IsActive)
                    {
                        if (ViewBag.MenuPermission.IsEdit)
                        {
                            <input class="chkIsActive" type="checkbox" onchange="ActiveInactive(@item.UserId,false)" checked data-on="Active" data-off="In Active" data-toggle="toggle" data-onstyle="success" data-offstyle="danger" data-width="100" data-height="25" data-style="design">
                        }
                        else
                        {
                            <input disabled class="chkIsActive" type="checkbox" checked data-on="Active" data-off="In Active" data-toggle="toggle" data-onstyle="success" data-offstyle="danger" data-width="100" data-height="25" data-style="design">
                        }
                    }
                    else
                    {
                        if (ViewBag.MenuPermission.IsEdit)
                        {
                            <input class="chkIsActive" type="checkbox" onchange="ActiveInactive(@item.UserId,true)" data-on="Active" data-off="In Active" data-toggle="toggle" data-onstyle="success" data-offstyle="danger" data-width="100" data-height="25" data-style="design">
                        }
                        else
                        {
                            <input disabled class="chkIsActive" type="checkbox" data-on="Active" data-off="In Active" data-toggle="toggle" data-onstyle="success" data-offstyle="danger" data-width="100" data-height="25" data-style="design">
                        }
                    }
                </td>
                @*<td>@item.AddedByCode</td>
                    <td>@item.AddedOn.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1] + " " + Request.Cookies["BusinessSetting"].Value.Split('&')[1].Split('=')[1])</td>
                    <td>@item.ModifiedByCode</td>
                    <td>@(item.ModifiedOn != null ? item.ModifiedOn.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1] + " " + Request.Cookies["BusinessSetting"].Value.Split('&')[1].Split('=')[1]) : "")</td>*@
            </tr>
            count++;
        }
    </tbody>
