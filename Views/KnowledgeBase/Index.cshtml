                <img src="~/Content/web-assets/images/innerbanner.png" class="img-fluid" alt="EquiBillBook Knowledge Base - Help Center">
            </div>
        </div>
    </div>
</section>
<!-- // -->

<!-- Main Content -->
<section class="py-5">
    <div class="container">
        <!-- Search Section -->
        <div class="kb-search-box mb-5">
            <form id="kbSearchForm" onsubmit="return false;">
                <div class="input-group">
                    <input type="text" id="kbSearchInput" class="form-control kb-search-input" placeholder="Search for help articles, guides, and tutorials..." autocomplete="off">
                    <button type="submit" class="btn kb-search-btn">
                        <i class="fas fa-search me-2"></i>Search
                    </button>
                </div>
            </form>
        </div>
        
        <div class="row">
            <!-- Sidebar - Categories -->
            <div class="col-lg-3 mb-4">
                <div class="kb-sidebar">
                    <div class="kb-category-list">
                        <h5 class="mb-3 fw-bold">Categories</h5>
                        <div class="kb-category-list-item">
                            <a href="/knowledgebase">
                                <span>All Articles</span>
                                <span class="kb-category-count">@(ViewBag.Articles != null ? ((System.Collections.IEnumerable)ViewBag.Articles).Cast<object>().Count() : 0)</span>
                            </a>
                        </div>
                        @if (ViewBag.Categories != null)
                        {
                            foreach (string category in ViewBag.Categories)
                            {
                                var categoryArticles = ViewBag.Articles != null ? 
                                    ((System.Collections.IEnumerable)ViewBag.Articles).Cast<KnowledgeBaseArticle>().Where(a => a.Category == category).ToList() : 
                                    new List<KnowledgeBaseArticle>();
                                <div class="kb-category-list-item">
                                    <a href="/knowledgebase/category/@category.ToLower().Replace(" ", "-")">
                                        <span>@category</span>
                                        <span class="kb-category-count">@categoryArticles.Count</span>
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- Articles List -->
            <div class="col-lg-9">
                <div id="kbArticlesContainer">
                    @if (ViewBag.Articles != null && ((System.Collections.IEnumerable)ViewBag.Articles).Cast<object>().Any())
                    {
                        // Load only first 12 articles initially for infinite scroll
                        var allArticles = ((System.Collections.IEnumerable)ViewBag.Articles).Cast<KnowledgeBaseArticle>().ToList();
                        var initialArticles = allArticles.Take(12).ToList();
                        
                        // Group initial articles by category
                        var articlesByCategory = initialArticles.GroupBy(a => a.Category);
                        
                        foreach (var categoryGroup in articlesByCategory)
                        {
                            <div class="mb-5 kb-category-group" data-category="@categoryGroup.Key">
                                <div class="row">
                                    @foreach (var article in categoryGroup)
                                    {
                                        <div class="col-md-6 mb-3 kb-article-item" data-title="@article.Title.ToLower()" data-tags="@string.Join(" ", article.Tags).ToLower()" data-category="@article.Category">
                                            <div class="kb-article-card">
                                                <h4 class="kb-article-title">
                                                    <a href="/knowledgebase/article/@article.Slug">@article.Title</a>
                                                </h4>
                                                <p class="kb-article-description">@article.Description</p>
                                                <div class="d-flex flex-wrap">
                                                    @foreach (var tag in article.Tags)
                                                    {
                                                        <span class="kb-tag">@tag</span>
                                                    }
                                                </div>
                                                <div class="mt-2">
                                                    <small class="text-muted">
                                                        <i class="far fa-clock me-1"></i>
                                                        Updated @(((DateTime)article.LastUpdated).ToString("MMM dd, yyyy"))
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <!-- Empty container - JavaScript will load articles via API -->
                    }
                </div>

                <!-- Loading indicator -->
                <div id="kbLoadingIndicator" class="text-center py-4" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 text-muted">Loading more articles...</p>
                </div>

                <!-- No Search Results -->
                <div id="kbNoResults" class="kb-no-results" style="display: none;">
                    <i class="fas fa-search fa-3x mb-3 text-muted"></i>
                    <h3>No articles found</h3>
                    <p>Try different keywords or browse by category.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
        var currentPage = 1;
        var pageSize = 12;
        var isLoading = false;
        var hasMore = true;
        var currentSearch = '';
        var currentCategory = '';
        var searchTimeout;

        // Infinite scroll functionality
        $(window).on('scroll', function() {
            if (isLoading || !hasMore) return;

            var scrollTop = $(window).scrollTop();
            var windowHeight = $(window).height();
            var documentHeight = $(document).height();
            var scrollPercentage = (scrollTop + windowHeight) / documentHeight;

            // Load more when user scrolls to 80% of the page
            if (scrollPercentage > 0.8) {
                loadMoreArticles();
            }
        });

        // Search functionality with debounce
        $('#kbSearchForm').on('submit', function(e) {
            e.preventDefault();
            performSearch();
        });

        $('#kbSearchInput').on('keyup', function() {
            clearTimeout(searchTimeout);
            var query = $(this).val().trim();
            
            if (query.length === 0) {
                resetToInitialLoad();
            } else if (query.length >= 2) {
                searchTimeout = setTimeout(function() {
                    performSearch();
                }, 500); // Debounce search by 500ms
            }
        });

        function resetToInitialLoad() {
            currentPage = 1;
            currentSearch = '';
            currentCategory = '';
            hasMore = true;
            $('#kbArticlesContainer').empty();
            $('#kbNoResults').hide();
            $('#kbArticlesContainer').show();
            loadMoreArticles(true);
        }

        function performSearch() {
            var query = $('#kbSearchInput').val().trim();
            currentSearch = query;
            currentPage = 1;
            hasMore = true;
            $('#kbArticlesContainer').empty();
            $('#kbNoResults').hide();
            $('#kbArticlesContainer').show();
            loadMoreArticles(true);
        }

        function loadMoreArticles(reset) {
            if (isLoading) return;

            isLoading = true;
            $('#kbLoadingIndicator').show();

            var requestData = {
                PageIndex: reset ? 1 : currentPage,
                PageSize: pageSize,
                Search: currentSearch,
                Category: currentCategory
            };

            $.ajax({
                url: '/api/KnowledgeBase/GetArticles',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(requestData),
                success: function(response) {
                    if (response.Status === 1 && response.Data) {
                        var articles = response.Data.Articles;
                        hasMore = response.Data.HasMore;

                        if (articles && articles.length > 0) {
                            appendArticles(articles);
                            currentPage = reset ? 2 : currentPage + 1;
                        } else if (currentPage === 1) {
                            // No results on first page
                            $('#kbNoResults').show();
                            $('#kbArticlesContainer').hide();
                        }
                    } else {
                        hasMore = false;
                        if (currentPage === 1) {
                            $('#kbNoResults').show();
                            $('#kbArticlesContainer').hide();
                        }
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Error loading articles:', error);
                    hasMore = false;
                    if (currentPage === 1) {
                        $('#kbNoResults').show();
                        $('#kbArticlesContainer').hide();
                    }
                },
                complete: function() {
                    isLoading = false;
                    $('#kbLoadingIndicator').hide();
                }
            });
        }

        function appendArticles(articles) {
            // Group articles by category
            var articlesByCategory = {};
            articles.forEach(function(article) {
                if (!articlesByCategory[article.Category]) {
                    articlesByCategory[article.Category] = [];
                }
                articlesByCategory[article.Category].push(article);
            });

            // Append articles grouped by category
            Object.keys(articlesByCategory).forEach(function(category) {
                var categoryArticles = articlesByCategory[category];
                var categoryGroup = $('.kb-category-group[data-category="' + category + '"]');
                
                if (categoryGroup.length === 0) {
                    // Create new category group
                    var categoryHtml = '<div class="mb-5 kb-category-group" data-category="' + category + '"><div class="row">';
                    categoryArticles.forEach(function(article) {
                        categoryHtml += createArticleHtml(article);
                    });
                    categoryHtml += '</div></div>';
                    $('#kbArticlesContainer').append(categoryHtml);
                } else {
                    // Append to existing category group
                    categoryArticles.forEach(function(article) {
                        var articleHtml = createArticleHtml(article);
                        categoryGroup.find('.row').append(articleHtml);
                    });
                }
            });
        }

        function createArticleHtml(article) {
            var tagsHtml = '';
            if (article.Tags && article.Tags.length > 0) {
                article.Tags.forEach(function(tag) {
                    tagsHtml += '<span class="kb-tag">' + escapeHtml(tag) + '</span>';
                });
            }

            return '<div class="col-md-6 mb-3 kb-article-item" data-title="' + 
                   escapeHtml(article.Title).toLowerCase() + '" data-tags="' + 
                   (article.Tags ? article.Tags.join(' ').toLowerCase() : '') + '" data-category="' + 
                   escapeHtml(article.Category) + '">' +
                   '<div class="kb-article-card">' +
                   '<h4 class="kb-article-title">' +
                   '<a href="/knowledgebase/article/' + escapeHtml(article.Slug) + '">' + escapeHtml(article.Title) + '</a>' +
                   '</h4>' +
                   '<p class="kb-article-description">' + escapeHtml(article.Description) + '</p>' +
                   '<div class="d-flex flex-wrap">' + tagsHtml + '</div>' +
                   '<div class="mt-2">' +
                   '<small class="text-muted">' +
                   '<i class="far fa-clock me-1"></i>Updated ' + escapeHtml(article.LastUpdated) +
                   '</small>' +
                   '</div>' +
                   '</div>' +
                   '</div>';
        }

        function escapeHtml(text) {
            if (!text) return '';
            var map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, function(m) { return map[m]; });
        }

        // Initial load check
        var initialArticleCount = $('.kb-article-item').length;
        
        // If no articles were loaded server-side, load them via API
        if (initialArticleCount === 0) {
            // Hide the "No articles found" message if it exists
            $('#kbNoResults').hide();
            $('#kbArticlesContainer').show();
            currentPage = 1;
            loadMoreArticles(true);
        } 
        // If there are some articles but less than pageSize, try to load more
        else if (initialArticleCount > 0 && initialArticleCount < pageSize) {
            currentPage = 2;
            loadMoreArticles(false);
        } else {
            // If we have a full page, set currentPage to 2 for next load
            currentPage = 2;
        }
    });
</script>

