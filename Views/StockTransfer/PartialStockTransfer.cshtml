
@{
    var count = 1;
    <thead>
        <tr role="row">

            <th>#</th>
            <th class="hide noPrint">Action</th>
            <th>Date</th>
            <th>Reference No</th>
            <th>From Business Location</th>
            <th>To Business Location</th>
            <th>Status</th>
            <th>Total Items</th>
            <th>Total Amount</th>
            @*<th>Shipping Charge</th>*@
            <th>Reason</th>
            @*<th>Notes</th>*@
            @*<th>Added By</th>
                <th>Added On</th>
                <th>Last Modified By</th>
                <th>Last Modified On</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.StockTransfers)
        {
            <tr>
                <td>@(ViewBag.PageSize * (ViewBag.PageIndex - 1) + count)</td>
                <td class="hide noPrint">
                    <div class="btn-group">
                        <button type="button" class="btn btn-info">Action</button>
                        <button type="button" class="btn btn-info dropdown-toggle dropdown-icon" data-toggle="dropdown">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" role="menu">
                            @*<a class="dropdown-item" href="/purchase/view" id="View"><i class="fas fa-eye"></i> View purchase</a>*@
                            @if (ViewBag.MenuPermission.IsEdit)
                            {
                                <a class="dropdown-item" href="/stockTransfer/edit?StockTransferId=@item.StockTransferId" id="Edit"><i class="fas fa-edit"></i> Edit</a>
                            }
                            <a class="dropdown-item" href="javascript:void(0)" id="" onclick="View(@item.StockTransferId)"><i class="fas fa-eye"></i> View</a>
                            @if (ViewBag.MenuPermission.IsDelete)
                            {
                                <a class="dropdown-item" href="javascript:void(0)" id="Edit" onclick="Delete(@item.StockTransferId,'@Html.Raw(HttpUtility.JavaScriptStringEncode(item.ReferenceNo))')"><i class="fas fa-trash-alt"></i> Delete</a>
                            }

                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="javascript:void(0)" id="View" onclick="PrintInvoice('@ViewBag.InvoiceUrl/stocktransfer/invoice?InvoiceId=@item.InvoiceId')"><i class="fas fa-file"></i> Invoice</a>
                            <a class="dropdown-item" href="javascript:void(0)" onclick="copyCode('@ViewBag.InvoiceUrl/stocktransfer/invoice?InvoiceId=@item.InvoiceId')" id="Edit"><i class="fas fa-copy"></i> Copy Invoice Url</a>
                            @if (ViewBag.StockTransferStatusUpdate.IsEdit)
                            {
                                <a class="dropdown-item" href="javascript:void(0)" onclick="openStockTransferStatusModal(@item.StockTransferId,'@item.Status')"><i class="fas fa-edit"></i> Change Status</a>
                            }
                        </div>
                    </div>
                </td>
                <td>@item.Date.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1] + " " + Request.Cookies["BusinessSetting"].Value.Split('&')[1].Split('=')[1])</td>
                <td>@item.ReferenceNo</td>
                <td>@item.FromBranch</td>
                <td>@item.ToBranch</td>
                <td>@(item.Status == 1 ? "Pending" : item.Status == 2 ? "In Transit" : "Completed"  )</td>
                <td>@item.TotalItems @*@(String.Format("{0:0.##}", item.TotalQuantity))*@</td>
                <td>
                    @{
                        if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                        {
                            @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", item.TotalAmount))
                        }
                        else
                        {
                            @(String.Format("{0:0.##}", item.TotalAmount))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                        }
                    }
                </td>
                @*<td>
            @{
                if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                {
                    @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", item.ShippingCharge))
                }
                else
                {
                    @(String.Format("{0:0.##}", item.ShippingCharge))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                }
            }
        </td>*@
                <td>@item.StockTransferReason</td>
                @*<td>@item.Notes</td>*@
                @*<td>@item.AddedByCode</td>
        <td>@item.AddedOn.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1] + " " + Request.Cookies["BusinessSetting"].Value.Split('&')[1].Split('=')[1])</td>
        <td>@item.ModifiedByCode</td>
        <td>@(item.ModifiedOn != null ? item.ModifiedOn.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1] + " " + Request.Cookies["BusinessSetting"].Value.Split('&')[1].Split('=')[1]) : "")</td>*@
                @*<td class="hide noPrint">
            @if (ViewBag.MenuPermission.IsEdit)
            {
                <a href="/stockTransfer/edit?StockTransferId=@item.StockTransferId" class="btn btn-success btn-sm" id="Edit" data-toggle="tooltip" data-placement="bottom" title="Edit"> <i class="fas fa-edit"></i></a>
            }
            @if (ViewBag.MenuPermission.IsDelete)
            {
                <a href="javascript:void(0)" onclick="Delete(@item.StockTransferId,'@item.ReferenceNo')" class="btn btn-danger btn-sm" id="Delete" data-toggle="tooltip" data-placement="bottom" title="Delete"><i class="far fa-trash-alt"></i></a>
            }

        </td>*@

            </tr>
            count++;
        }

    </tbody>
    <tbody>
        <tr>
            <td class="hide noPrint"></td>
            <td colspan="6" data-title="Total" class="text-right"><b>Total</b></td>
            @*<td data-title="Due Amount">
            @(String.Format("{0:0.##}", ViewBag.TotalQuantity))
        </td>*@
            <td data-title="Due Amount">
                @ViewBag.TotalItems
            </td>
            <td data-title="Due Amount">
                @{
                    if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                    {
                        @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", ViewBag.TotalAmount))
                    }
                    else
                    {
                        @(String.Format("{0:0.##}", ViewBag.TotalAmount))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                    }
                }
            </td>
            @*<td data-title="Due Amount">
            @{
                if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                {
                    @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", ViewBag.TotalShippingCharge))
                }
                else
                {
                    @(String.Format("{0:0.##}", ViewBag.TotalShippingCharge))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                }
            }
        </td>*@
            <td colspan="6"></td>
        </tr>
    </tbody>
    <tbody class="hide noPrint">
        <tr></tr>
        <tr>
            <td colspan="5">
                <div class="dataTables_info" id="tblUserRole_info_custom" role="status" aria-live="polite">Showing @(ViewBag.PageSize * (ViewBag.PageIndex - 1) + 1) to @(ViewBag.PageSize * ViewBag.CurrentPageIndex) of @ViewBag.TotalCount entries</div>
                @if (ViewBag.PageCount > 1)
                {
                    int j = 0;
                    <div class="dataTables_paginate paging_simple_numbers" id="tblUserRole_paginate_custom" style="float:right">
                        <ul class="pagination">
                            @if (ViewBag.CurrentPageIndex > 1)
                            {
                                <li class="paginate_button page-item previous" id="tblUserRole_previous">
                                    <a onclick="fetchList(1)" href="javascript:void(0)" aria-controls="tblUserRole" data-dt-idx="0" tabindex="0" class="page-link">First</a>
                                </li>
                                <li class="paginate_button page-item previous" id="tblUserRole_previous">
                                    <a onclick="fetchList(@(ViewBag.CurrentPageIndex - 1))" href="javascript:void(0)" aria-controls="tblUserRole" data-dt-idx="0" tabindex="0" class="page-link">Previous</a>
                                </li>
                            }
                            @for (int i = ViewBag.CurrentPageIndex; i <= ViewBag.PageCount; i++)
                            {
                                <li class="@(i == ViewBag.CurrentPageIndex ? "paginate_button page-item active" : "paginate_button page-item")">
                                    <a onclick="fetchList(@i)" href="javascript:void(0)" aria-controls="tblUserRole" data-dt-idx="1" tabindex="0" class="page-link">@(i)</a>
                                </li>
                                if (j == 10)
                                {
                                    i = ViewBag.PageCount + 1;
                                }
                                j++;
                            }
                            @if (ViewBag.CurrentPageIndex < ViewBag.PageCount)
                            {
                                <li class="paginate_button page-item next" id="tblUserRole_next">
                                    <a onclick="fetchList(@(ViewBag.CurrentPageIndex + 1))" href="javascript:void(0)" aria-controls="tblUserRole" data-dt-idx="2" tabindex="0" class="page-link">Next</a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </td>
        </tr>
    </tbody>
}

<div class="modal fade" id="stockTransferStatusModal">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update Status</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">

                    <div class="col-md-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Status <span class="danger">*</span> <i tabindex="0" class="fa fa-info-circle text-info hover-q no-print @(Request.Cookies["SystemSetting"].Value.Split('&')[0].Split('=')[1] == "True" ? "":"hidden")" role="button" data-toggle="popover" data-trigger="focus" title="" data-content="Products in this purchase will be available for sale only if the <b>Order Status</b> is <b>Items Received</b>."></i></label>
                            <select class="form-control " id="ddlStatus_M">
                                <option value="1">Pending</option>
                                <option value="2">In Transit</option>
                                <option value="3">Completed</option>
                            </select>
                            <small class="text-red font-weight-bold errorText" id="divStatus_M"></small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-left:auto">Close</button>
                <button type="button" class="btn btn-primary" onclick="UpdateStockTransferStatus()"><i class="fas fa-edit"></i> Update</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script type="text/javascript">
     $('#divAsof').text('Showing Results: (' + @Html.Raw(Json.Encode(ViewBag.FromDate.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1]) + " - " + ViewBag.ToDate.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1])))+')');
    $('#divTotalCount').text('Total : '+@Html.Raw(Json.Encode(ViewBag.TotalCount)));
    $('#divActiveCount').text('Active : '+@Html.Raw(Json.Encode(ViewBag.ActiveCount)));
    $('#divInactiveCount').text('In-Active : '+@Html.Raw(Json.Encode(ViewBag.InactiveCount)));
</script>
