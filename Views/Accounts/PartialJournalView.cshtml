


@{
    if (ViewBag.Journal != null)
    {
        <div class="modal-header">
            <h4 class="modal-title">Journal Details</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="card-body">
                <div class="card card-primary card-outline">

                    <!-- form start -->
                    <div id="quickForm">
                        <div class="card-body">

                            <div class="row">
                                <div class="col-sm-3 @(ViewBag.Branchs.Count > 1 ? "" : "hidden")">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Business Location </label>
                                        <div class="input-group">

                                            @foreach (var item in ViewBag.Branchs)
                                            {
                                                if (ViewBag.Journal.BranchId == item.BranchId)
                                                {
                                                    <span>@item.Branch</span>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Date<span class="danger">*</span></label>
                                        <div class="input-group date" id="_Date" data-target-input="nearest">
                                            <span>@(ViewBag.Journal.Date != null ? ViewBag.Journal.Date.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1]):DateTime.Now)</span>

                                        </div>
                                    </div>
                                </div>
                                @*<div class="col-sm-4">
                                        <div class="form-group">
                                            <label>Payment Method <span class="danger">*</span></label>
                                            <select class="form-control select2" id="ddlFTPaymentType">
                                                <option value="0">Select</option>
                                                @foreach (var item in ViewBag.PaymentTypes)
                                                {
                                                    <option value="@item.PaymentTypeId">@item.PaymentType</option>
                                                }
                                            </select>
                                            <small class="text-red font-weight-bold errorText" id="divPaymentType_FT"></small>
                                        </div>
                                    </div>*@
                                <div class="col-sm-3">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Reference No</label>
                                        <span class="input-group">@ViewBag.Journal.ReferenceNo</span>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Notes</label>
                                        <span class="input-group">@ViewBag.Journal.Notes</span>
                                        @*<input type="text" class="form-control" id="txtFTNotes" placeholder="">*@
                                    </div>
                                </div>
                                @*<div class="col-sm-3 service">
                                        <br />
                                        <div class="form-group">
                                            <div class="checkbox icheck-turquoise">
                                                <input type="checkbox" id="chkEnableSecondaryUnit" />
                                                <label for="chkEnableSecondaryUnit" class="mt-2">Cash based journal</label>
                                            </div>
                                        </div>
                                    </div>*@

                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label id="lblProductImage">Attach Document </label>
                                        <img class="input-group" id="blahAttachDocument" src="@ViewBag.Journal.AttachDocument" alt="" height="60" style="padding-top:10px;width:auto !important">
                                    </div>
                                </div>
                            </div>
                            <hr />
                            @*<div class="row mb-3">
                                    <span class="col-sm-12">
                                        <a href="javascript:void(0)" class="btn btn-info btn-sm add-row float-right" onclick="addNew()"><i class="fas fa-plus"> Add Another Line</i></a>
                                    </span>
                                </div>*@
                            <div class="row mt-1">

                                <div class="col-sm-12 table-responsive ">
                                    <table id="" class="table table-bordered table-striped">
                                        <thead id="thead">
                                            <tr>
                                                <th>Account</th>
                                                <th>Description</th>
                                                <th>Contact</th>
                                                <th>Debits</th>
                                                <th>Credits</th>
                                                @*<th style="width:5%">
                                                        <button type="button" class="btn btn-success btn-sm" onclick="deleteFullCombo(@ViewBag.Journal.JournalId)">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </th>*@
                                            </tr>
                                        </thead>
                                        <tbody class="table-body">
                                            @{
                                                var counter = 1;
                                                foreach (var journal in ViewBag.Journal.JournalPayments)
                                                {
                                                    <tr id="divCombo@(counter)">
                                                        <td>
                                                            <div class="input-group">
                                                                @{
                                                                    if (ViewBag.AccountSubTypes != null)
                                                                    {
                                                                        foreach (var item in ViewBag.AccountSubTypes)
                                                                        {
                                                                            if (item.Accounts.Count > 0)
                                                                            {
                                                                                foreach (var inner in item.Accounts)
                                                                                {
                                                                                    if (journal.AccountId == inner.AccountId)
                                                                                    {
                                                                                        <span>@inner.DisplayAs</span>
                                                                                    }
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            </div>
                                                        </td>
                                                        <td class="service">
                                                            <div class="form-group">
                                                                <span>@journal.Notes</span>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="input-group">
                                                                @foreach (var item in ViewBag.ExpenseFor)
                                                                {
                                                                    if (journal.ExpenseFor == item.UserId)
                                                                    {
                                                                        <span>
                                                                            @item.Name
                                                                            @if (item.MobileNo != null && item.MobileNo != "")
                                                                            {
                                                                                <span>-@item.MobileNo</span>
                                                                            }
                                                                        </span>
                                                                    }
                                                                }
                                                            </div>
                                                        </td>
                                                        <td class="service">
                                                            <div class="form-group">
                                                                <span>@(String.Format("{0:0.##}", journal.Debit >0 ?journal.Debit:""))</span>
                                                            </div>
                                                        </td>
                                                        <td class="service">
                                                            <div class="form-group">
                                                                <span>@(String.Format("{0:0.##}", journal.Credit>0?journal.Credit : ""))</span>
                                                            </div>
                                                        </td>
                                                        @*<td>
                                                                <button type="button" class="btn btn-danger btn-sm" onclick="deleteCombo(1,@journal.JournalPaymentId)">
                                                                    <i class="fas fa-times">
                                                                    </i>
                                                                </button>
                                                                <input type="hidden" id="hdnJournalPaymentId@(counter)" value="@journal.JournalPaymentId" />
                                                            </td>*@
                                                    </tr>
                                                    counter++;
                                                }
                                            }

                                        </tbody>
                                        <tbody>
                                            <tr>
                                                <td colspan="3" data-title="Total" class="text-right"><b>Total</b></td>
                                                <td>
                                                    <span for="inputEmail3" class="col-4 col-form-label text-left text-bold" id="lblTotalDebit">
                                                        @{
                                                            if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                                                            {
                                                                @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", ViewBag.TotalDebit))
                                                            }
                                                            else
                                                            {
                                                                @(String.Format("{0:0.##}", ViewBag.TotalDebit))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                                                            }
                                                        }
                                                    </span>
                                                </td>
                                                <td colspan="2">
                                                    <span for="inputEmail3" class="col-4 col-form-label text-left text-bold" id="lblTotalCredit">
                                                        @{
                                                            if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                                                            {
                                                                @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", ViewBag.TotalCredit))
                                                            }
                                                            else
                                                            {
                                                                @(String.Format("{0:0.##}", ViewBag.TotalCredit))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                                                            }
                                                        }
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr class="hidden" id="divDifference">
                                                <td colspan="3" data-title="Difference" class="text-right danger">Difference</td>
                                                <td>
                                                    <span for="inputEmail3" class="col-4 col-form-label text-left danger" id="lblDebitDifference">
                                                    </span>
                                                </td>
                                                <td colspan="2">
                                                    <span for="inputEmail3" class="col-4 col-form-label text-left danger" id="lblCreditDifference">
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <small class="text-red font-weight-bold errorText" id="divJournalPayment"></small>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}


