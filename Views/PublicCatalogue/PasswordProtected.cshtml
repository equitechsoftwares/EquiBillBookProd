@{
    ViewBag.Title = "Password Protected Catalogue";
    Layout = null;
    var catalogue = ViewBag.Catalogue;
}

<style>
    :root {
        color-scheme: light;
    }

    body {
        margin: 0;
        font-family: "Inter", "Segoe UI", system-ui, -apple-system, sans-serif;
        color: #1f2933;
        background: #eef2ff;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        border: 0;
    }

    .password-protected-container {
        min-height: 100vh;
        padding: 2.5rem 1.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(circle at top left, rgba(255, 255, 255, 0.35) 0%, rgba(238, 242, 255, 0.05) 45%) no-repeat,
                    linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .password-card {
        position: relative;
        background: rgba(255, 255, 255, 0.92);
        border-radius: 18px;
        box-shadow: 0 30px 60px -30px rgba(17, 24, 39, 0.45);
        border: 1px solid rgba(102, 126, 234, 0.15);
        backdrop-filter: blur(14px);
        overflow: hidden;
        max-width: 500px;
        margin: 0 auto;
    }

    .password-card::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(160deg, rgba(102, 126, 234, 0.16), rgba(118, 75, 162, 0.08));
        pointer-events: none;
    }

    .password-card::after {
        content: '';
        position: absolute;
        width: 180px;
        height: 180px;
        bottom: -60px;
        right: -60px;
        background: radial-gradient(circle at center, rgba(99, 102, 241, 0.35) 0%, rgba(99, 102, 241, 0) 70%);
        filter: blur(0.5px);
        pointer-events: none;
    }

    .password-card .card-body {
        position: relative;
        z-index: 1;
        padding: 3.25rem 3rem;
        @* text-align: center; *@
    }

    .lock-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 78px;
        height: 78px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.24), rgba(59, 130, 246, 0.18));
        border: 1px solid rgba(99, 102, 241, 0.25);
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.45), 0 20px 35px -22px rgba(60, 64, 198, 0.75);
        margin-bottom: 1.75rem;
    }

    .lock-icon {
        font-size: 2.25rem;
        color: #4338ca;
        animation: pulse 2.3s ease-in-out infinite;
    }

    h2 {
        font-weight: 700;
        letter-spacing: -0.02em;
        color: #111827;
    }

    .password-description {
        font-size: 1rem;
        line-height: 1.6;
        color: #4b5563;
        margin-bottom: 1.75rem;
    }

    .password-meta {
        display: inline-flex;
        align-items: center;
        gap: 0.65rem;
        padding: 0.6rem 1rem;
        border-radius: 999px;
        background: rgba(99, 102, 241, 0.12);
        color: #4338ca;
        font-weight: 500;
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.35);
    }

    .input-wrapper {
        position: relative;
    }

    .input-icon {
        position: absolute;
        top: 50%;
        left: 1.1rem;
        transform: translateY(-50%);
        color: #6366f1;
        font-size: 1.05rem;
        pointer-events: none;
        opacity: 0.7;
    }

    .form-control {
        border-radius: 12px;
        border: none !important;
        padding: 0.85rem 1rem;
        font-size: 1rem;
        width: 100%;
        max-width: 100%;
        transition: box-shadow 150ms ease;
        background: rgba(255, 255, 255, 0.85);
        color: #111827;
        padding-left: 1rem;
        outline: none;
        box-shadow: inset 0 0 0 1px rgba(148, 163, 184, 0.45);
    }

    .form-control:focus {
        outline: none;
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.15), inset 0 0 0 1px rgba(99, 102, 241, 0.55);
    }

    .password-action-row {
        display: flex;
        justify-content: center;
        margin-top: 1.25rem;
    }

    .password-action-row .btn-primary {
        min-width: 11rem;
    }

    .btn-primary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        border-radius: 12px;
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
        border: none;
        padding: 0.95rem 1rem;
        font-weight: 600;
        letter-spacing: 0.02em;
        transition: transform 150ms ease, box-shadow 150ms ease, background 150ms ease;
        color: #f5f5ff;
        box-shadow: 0 16px 32px -18px rgba(99, 102, 241, 0.65);
    }

    .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 20px 25px -15px rgba(79, 70, 229, 0.45);
    }

    .btn-primary:active {
        transform: translateY(0);
        box-shadow: none;
    }

    .btn-primary:focus-visible {
        outline: 3px solid rgba(99, 102, 241, 0.35);
        outline-offset: 3px;
    }

    .input-label {
        font-weight: 600;
        font-size: 0.95rem;
        color: #1f2937;
        text-align: left;
        display: block;
        margin-bottom: 0.6rem;
    }

    .input-hint {
        display: block;
        font-size: 0.87rem;
        color: #6b7280;
        margin-top: 0.5rem;
    }

    .footer-note {
        font-size: 0.85rem;
        color: #6b7280;
        margin-top: 2.25rem;
    }

    .footer-note strong {
        color: #4338ca;
    }

    #errorMessage {
        display: none;
        align-items: center;
        justify-content: space-between;
        gap: 0.75rem;
        padding: 0.65rem 1rem;
        border-radius: 14px;
        font-weight: 500;
        text-align: left;
        border: 1px solid rgba(248, 113, 113, 0.45);
        background: linear-gradient(145deg, rgba(254, 226, 226, 0.92) 0%, rgba(254, 215, 215, 0.85) 100%);
        color: #7f1d1d;
        box-shadow: 0 16px 30px -26px rgba(220, 38, 38, 0.6);
    }

    .error-message-content {
        display: flex;
        align-items: center;
        gap: 0.65rem;
    }

    .error-message-content i {
        font-size: 1.1rem;
        color: #b91c1c;
    }

    .error-close-btn {
        background: rgba(255, 255, 255, 0.7);
        border: none;
        color: #7f1d1d;
        font-size: 1rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        transition: background 160ms ease, color 160ms ease, transform 140ms ease, box-shadow 140ms ease;
        cursor: pointer;
        font-weight: 600;
        line-height: 1;
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.9);
    }

    .error-close-btn:hover,
    .error-close-btn:focus-visible {
        background: rgba(248, 113, 113, 0.2);
        color: #7f1d1d;
        outline: none;
        transform: translateY(-1px);
        box-shadow: 0 6px 12px -8px rgba(248, 113, 113, 0.55);
    }

    #errorMessage.is-visible {
        display: flex;
        animation: fadeInDown 220ms ease-out forwards;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-6px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.08); }
    }

    .floating-blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(0px);
        opacity: 0.45;
        z-index: 0;
    }

    .floating-blob.blob-1 {
        width: 160px;
        height: 160px;
        top: -70px;
        left: -70px;
        background: radial-gradient(circle at center, rgba(129, 140, 248, 0.45) 0%, rgba(129, 140, 248, 0) 65%);
    }

    .floating-blob.blob-2 {
        width: 120px;
        height: 120px;
        bottom: 30px;
        left: 25px;
        background: radial-gradient(circle at center, rgba(236, 72, 153, 0.35) 0%, rgba(236, 72, 153, 0) 70%);
    }

    .floating-blob.blob-3 {
        width: 140px;
        height: 140px;
        top: 80px;
        right: -40px;
        background: radial-gradient(circle at center, rgba(79, 70, 229, 0.35) 0%, rgba(79, 70, 229, 0) 70%);
    }

    @@media (max-width: 575.98px) {
        .password-card .card-body {
            padding: 2.85rem 1.85rem !important;
        }

        .password-meta {
            font-size: 0.88rem;
            padding: 0.55rem 0.85rem;
        }

        h2 {
            font-size: 1.75rem;
        }

        .password-description {
            font-size: 0.95rem;
        }
    }
</style>

<div class="password-protected-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="password-card">
                    <span class="floating-blob blob-1"></span>
                    <span class="floating-blob blob-2"></span>
                    <span class="floating-blob blob-3"></span>
                    <div class="card-body text-center">
                        <div id="errorMessage" class="alert alert-danger mb-3" role="alert" aria-live="assertive">
                            <div class="error-message-content">
                                <i class="fas fa-exclamation-circle" aria-hidden="true"></i>
                                <div>
                                    <span id="errorText"></span>
                                </div>
                            </div>
                            <button type="button" class="error-close-btn" id="errorCloseButton" aria-label="Dismiss alert">
                                <span aria-hidden="true">×</span>
                                <span class="sr-only">Dismiss</span>
                            </button>
                        </div>

                        <h2 class="mb-2">Password Protected</h2>
                        <p class="password-description">This catalogue is password protected. Enter the password below to unlock and view the items.</p>

                        <div class="mt-4">
                            <div class="form-group mb-3">
                                <label class="input-label" for="txtPassword">Catalogue password</label>
                                <div class="input-wrapper">
                                    <i class="fas fa-key input-icon"></i>
                                    <input type="password" id="txtPassword" class="form-control form-control-lg" placeholder="Enter password">
                                </div>
                            </div>
                            <div class="password-action-row">
                                <button type="button" class="btn btn-primary btn-lg" onclick="verifyPassword()">
                                    <i class="fas fa-unlock"></i>
                                    <span>Unlock Catalogue</span>
                                </button>
                            </div>
                        </div>

                        <p class="footer-note">
                            <strong>Need help?</strong> Contact the catalogue owner if you’ve forgotten your access code.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    (function () {
        const passwordInput = document.getElementById('txtPassword');
        const errorMessage = document.getElementById('errorMessage');
        const errorText = document.getElementById('errorText');
        const errorCloseButton = document.getElementById('errorCloseButton');
        const slug = '@catalogue.UniqueSlug';
        let hideErrorTimeout = null;

        function showError(message) {
            if (!errorMessage || !errorText) {
                return;
            }

            errorText.textContent = message;
            errorMessage.classList.add('is-visible');

            if (hideErrorTimeout) {
                clearTimeout(hideErrorTimeout);
            }

            hideErrorTimeout = window.setTimeout(() => {
                hideError();
            }, 5000);
        }

        function hideError() {
            if (!errorMessage) {
                return;
            }

            errorMessage.classList.remove('is-visible');
            if (hideErrorTimeout) {
                clearTimeout(hideErrorTimeout);
                hideErrorTimeout = null;
            }
        }

        async function verifyPasswordHandler() {
            if (!passwordInput) {
                return;
            }

            const password = passwordInput.value.trim();

            if (!password) {
                showError('Please enter a password');
                return;
            }

            hideError();

            try {
                const response = await fetch('/PublicCatalogue/VerifyPassword', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8'
                    },
                    body: new URLSearchParams({
                        slug: slug,
                        password: password
                    })
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                const data = await response.json();

                if (data && data.Status === 1) {
                    const targetUrl = `/c/${encodeURIComponent(slug)}`;
                    if (window.location.pathname === targetUrl) {
                        window.location.reload();
                    } else {
                        window.location.href = targetUrl;
                    }
                } else {
                    showError('Incorrect password. Please try again.');
                    passwordInput.value = '';
                    passwordInput.focus();
                }
            } catch (error) {
                showError('An error occurred. Please try again.');
            }
        }

        window.verifyPassword = verifyPasswordHandler;

        if (passwordInput) {
            passwordInput.addEventListener('keypress', function (event) {
                if (event.which === 13 || event.key === 'Enter') {
                    verifyPasswordHandler();
                }
            });

            passwordInput.focus();
        }

        if (errorCloseButton) {
            errorCloseButton.addEventListener('click', hideError);
        }
    })();
</script>

