@{
    ViewBag.Title = "Catalogue Not Found";
    Layout = null;
}

<style>
    .not-found-container {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
    }
    
    .not-found-icon {
        font-size: 6rem;
        color: #ffc107;
        margin-bottom: 2rem;
    }
    
    .not-found-card {
        background: white;
        border-radius: 15px;
        padding: 3rem;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }
</style>

<div class="not-found-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="not-found-card text-center">
                    <i class="fas fa-exclamation-triangle not-found-icon"></i>
                    <h1 class="mb-3">Catalogue Not Found</h1>
                    <p class="lead text-muted mb-4">
                        The catalogue you're looking for doesn't exist, has been removed, or is no longer available.
                    </p>
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary btn-lg mr-2">
                            <i class="fas fa-home"></i> Go to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

