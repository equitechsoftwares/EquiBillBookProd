<script src="~/Content/JQuery/Customer/Restaurant/TableBooking.js"></script>
<script src="~/Content/JQuery/Customer/Restaurant/RecurringBooking.js"></script>
<script>
    $(document).ready(function () {
        console.log('[RecurringBooking Add] Page loaded');
        var viewBagBookingId = @(ViewBag.BookingId != null ? ViewBag.BookingId : 0);
        console.log('[RecurringBooking Add] ViewBag.BookingId:', viewBagBookingId);
        console.log('[RecurringBooking Add] ViewBag.BookingId type:', typeof viewBagBookingId);
        
        // Get the booking dropdown element
        var $bookingSelect = $('#ddlBookingId');
        console.log('[RecurringBooking Add] Booking dropdown found:', $bookingSelect.length > 0);
        
        // Log all available options
        var allOptions = $bookingSelect.find('option').map(function() {
            return { value: $(this).val(), text: $(this).text().substring(0, 50) };
        }).get();
        console.log('[RecurringBooking Add] Available booking options:', allOptions);
        
        // Initialize Select2 for ALL dropdowns first (including booking dropdown)
        $('.select2').select2({
            dropdownAutoWidth: true
        });
        console.log('[RecurringBooking Add] Select2 initialized for all dropdowns');
        
        // Check if ViewBag.BookingId is provided and > 0
        if (viewBagBookingId > 0) {
            var bookingIdToSelect = viewBagBookingId.toString();
            console.log('[RecurringBooking Add] Attempting to select BookingId:', bookingIdToSelect);
            
            // Hide booking details section immediately since we have a booking selected
            $('.bookingDetailsSection').hide();
            console.log('[RecurringBooking Add] Booking details section hidden immediately');
            
            // Check if the option exists
            var $targetOption = $bookingSelect.find('option[value="' + bookingIdToSelect + '"]');
            console.log('[RecurringBooking Add] Target option found:', $targetOption.length > 0);
            if ($targetOption.length > 0) {
                console.log('[RecurringBooking Add] Target option text:', $targetOption.text());
                
                // Set value AFTER Select2 is initialized
                $bookingSelect.val(bookingIdToSelect);
                console.log('[RecurringBooking Add] Value set on select:', $bookingSelect.val());
                
                // Trigger change to update Select2 display and hide booking details
                $bookingSelect.trigger('change');
                console.log('[RecurringBooking Add] Change event triggered');
                
                // Verify value after a short delay
                setTimeout(function() {
                    var currentVal = $bookingSelect.val();
                    console.log('[RecurringBooking Add] Value after change:', currentVal, 'Expected:', bookingIdToSelect);
                    
                    if (currentVal != bookingIdToSelect) {
                        console.warn('[RecurringBooking Add] Value mismatch! Attempting to fix...');
                        $bookingSelect.val(bookingIdToSelect).trigger('change.select2');
                        console.log('[RecurringBooking Add] Value reset with Select2 trigger');
                    }
                    
                    // Ensure booking details section stays hidden
                    var bookingDetailsVisible = $('.bookingDetailsSection').is(':visible');
                    console.log('[RecurringBooking Add] Booking details section visible:', bookingDetailsVisible);
                    if (bookingDetailsVisible) {
                        $('.bookingDetailsSection').hide();
                        console.log('[RecurringBooking Add] Booking details section force-hidden');
                    }
                }, 100);
            } else {
                console.warn('[RecurringBooking Add] WARNING: BookingId ' + bookingIdToSelect + ' not found in options!');
            }
        } else {
            console.log('[RecurringBooking Add] No BookingId provided (or BookingId is 0)');
        }
        
        // Initialize table layout if branch is already selected
        if ($('#ddlBranchId').val()) {
            // Load floors and time slots when branch is selected
            loadBookingFloors();
            loadBookingTimeSlots();
        }

        // Use StartDate instead of BookingDate for time slots and table layout
        $('#txtStartDate, #txtNoOfGuests, #txtDuration').on('change', function () {
            loadBookingTimeSlots();
            // Reload table layout when date changes to show updated availability
            if ($('#ddlBranchId').val() && $('#ddlBookingFloor').val()) {
                loadBookingTableLayout();
            }
        });
        $('#ddlBranchId').on('change', function () {
            loadBookingFloors();
            loadBookingTimeSlots();
        });
        // Reload table layout when floor changes
        $(document).on('change', '#ddlBookingFloor', function () {
            if ($('#ddlBranchId').val()) {
                loadBookingTableLayout();
            }
        });
        // Reload table layout when time slot changes
        $(document).on('change', '#ddlBookingTimeSlots', function () {
            if ($('#ddlBranchId').val() && $('#ddlBookingFloor').val()) {
                loadBookingTableLayout();
            }
        });
        
        // Update hidden customer ID when dropdown changes
        $('#ddlCustomer').on('change', function() {
            var customerId = $(this).val();
            $('#hdnCustomerId').val(customerId);
            // Clear error message when customer is selected
            if (customerId && customerId != '0') {
                $('#divCustomer').hide();
                // Clear red border
                var customerSelect = $(this);
                if (customerSelect.hasClass('select2-hidden-accessible')) {
                    customerSelect.next('.select2-container').find('.select2-selection').css('border', '');
                } else {
                    customerSelect.css('border', '');
                }
            }
        });

        // Clear error messages and borders when fields are changed
        $('#ddlBranchId').on('change', function() {
            $('#divBranchId').hide();
            var branchSelect = $(this);
            if (branchSelect.hasClass('select2-hidden-accessible')) {
                branchSelect.next('.select2-container').find('.select2-selection').css('border', '');
            } else {
                branchSelect.css('border', '');
            }
        });

        $('#ddlBookingTimeSlots').on('change', function() {
            $('#divBookingTime').hide();
            var timeSelect = $(this);
            if (timeSelect.hasClass('select2-hidden-accessible')) {
                timeSelect.next('.select2-container').find('.select2-selection').css('border', '');
            } else {
                timeSelect.css('border', '');
            }
        });

        $('#txtNoOfGuests, #txtDuration, #txtInterval, #txtStartDate').on('input change', function() {
            var fieldId = $(this).attr('id');
            var errorDivId = 'div' + fieldId.replace('txt', '').replace('hdn', '');
            // Map field IDs to error div IDs
            if (fieldId === 'txtNoOfGuests') errorDivId = 'divNoOfGuests';
            else if (fieldId === 'txtDuration') errorDivId = 'divDuration';
            else if (fieldId === 'txtInterval') errorDivId = 'divInterval';
            else if (fieldId === 'txtStartDate') errorDivId = 'divStartDate';
            
            $('#' + errorDivId).hide();
            $(this).css('border', '');
        });

        $('.dayOfWeek').on('change', function() {
            $('#divDaysOfWeek').hide();
            $('#weeklyOptions').css('border', '');
            // Check if StartDate matches selected days
            if (typeof checkStartDateMatchesDays === 'function') {
                checkStartDateMatchesDays();
            }
        });

        // Check StartDate match when StartDate changes (for Weekly recurrence)
        $('#txtStartDate').on('change', function() {
            if ($('#ddlIntervalUnit').val() === 'Week') {
                if (typeof checkStartDateMatchesDays === 'function') {
                    checkStartDateMatchesDays();
                }
            }
        });

        // Check StartDate match when interval unit changes to Week
        $('#ddlIntervalUnit').on('change', function() {
            if ($(this).val() === 'Week') {
                if (typeof checkStartDateMatchesDays === 'function') {
                    checkStartDateMatchesDays();
                }
            } else {
                // Clear any warnings if not Weekly
                $('#divStartDate').hide();
                $('#divDaysOfWeek').hide();
                $('#txtStartDate').css('border', '');
                $('#weeklyOptions').css('border', '');
            }
        });

    });
</script>

