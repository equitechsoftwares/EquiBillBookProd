                            <div class="row mt-1 mb-5">
                                <div class="col-sm-12 table-responsive " style="height:300px">
                                    <table id="" class="table table-bordered table-striped">
                                        <thead id="thead">
                                            <tr>
                                                <th></th>
                                                <th>Currency Code </th>
                                                <th>Currency Name</th>
                                                <th>Currency Symbol</th>
                                            </tr>
                                        </thead>
                                        <tbody class="table-body">
                                            @foreach (var item in ViewBag.Country.Currencys)
                                            {
                                                <tr class="divCurrency" id="tr@(item.CurrencyId)">
                                                    <td>
                                                        <div class="form-group">
                                                            <div class="checkbox icheck-turquoise">
                                                                @if (item.CountryCurrencyMapId != 0)
                                                                {
                                                                    <input type="checkbox" id="chkCurrency@(item.CurrencyId)" value="@item.CurrencyId" checked />
                                                                }
                                                                else
                                                                {
                                                                    <input type="checkbox" id="chkCurrency@(item.CurrencyId)" value="@item.CurrencyId" />
                                                                }

                                                                <label for="chkCurrency@(item.CurrencyId)" class="mt-2"></label>
                                                                <input type="hidden" value="@item.CountryCurrencyMapId" id="hdn@(item.CurrencyId)"/>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>@item.CurrencyCode</td>
                                                    <td>@item.CurrencyName</td>
                                                    <td>@item.CurrencySymbol</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <label>Check all the TimeZones which is available in this Country <span class="danger">*</span></label>
                            <div class="row mt-1">
                                <div class="col-sm-12 table-responsive " style="height:300px">
                                    <table id="" class="table table-bordered table-striped">
                                        <thead id="thead">
                                            <tr>
                                                <th></th>
                                                <th>Utc </th>
                                                <th>Display Name</th>
                                            </tr>
                                        </thead>
                                        <tbody class="table-body">
                                            @foreach (var item in ViewBag.Country.TimeZones)
                                            {
                                                <tr class="divTimeZone" id="tr@(item.TimeZoneId)">
                                                    <td>
                                                        <div class="form-group">
                                                            <div class="checkbox icheck-turquoise">
                                                                @if (item.CountryTimeZoneMapId != 0)
                                                                {
                                                                    <input type="checkbox" id="chkTimeZoneh@(item.TimeZoneId)" value="@item.TimeZoneId" checked />
                                                                }
                                                                else
                                                                {
                                                                    <input type="checkbox" id="chkTimeZone@(item.TimeZoneId)" value="@item.TimeZoneId" />
                                                                }

                                                                <label for="chkTimeZone@(item.TimeZoneId)" class="mt-2"></label>
                                                                <input type="hidden" value="@item.CountryTimeZoneMapId" id="hdn@(item.TimeZoneId)" />
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>@item.Utc</td>
                                                    <td>@item.DisplayName</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button id="btnUpdate" type="submit" class="btn btn-primary float-right" onclick="update(1)"><i class="fas fa-edit"></i> Update</button>
                            <button id="btnUpdate_AddAnother" type="submit" class="btn btn-success float-right mr-2" onclick="update(2)"><i class="fas fa-plus-circle"></i> Update & Add Another</button>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
