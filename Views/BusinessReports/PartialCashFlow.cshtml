




@{
    decimal OperatingActivities = 0, InvestingActivities = 0, FinancingActivities = 0, NetProfiLoss = 0;
    <thead id="thead">
        <tr>
            @*<th>Sln</th>*@
            <th>Account </th>
            <th>Account Code</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody class="table-body">
        @foreach (var accountType in ViewBag.AccountSubTypes)
        {
            decimal Balance = 0;
            bool showTotal = false;
            <tr class="bg-secondary">
                <td class="text-bold" colspan="4">@accountType.AccountSubType</td>
            </tr>
            foreach (var item in accountType.Accounts)
            {
                if (accountType.AccountSubType == "Cash Flow from Operating Activities")
                {
                    if (showTotal == false)
                    {
                        <tr>
                            @*<td>@(ViewBag.PageSize * (ViewBag.PageIndex - 1) + count)</td>*@
                            <td><span>Current Year Earnings</span></td>
                            <td></td>
                            <td>
                                @{
                                    <a href="/businessreports/ProfitandLoss?BranchId=@ViewBag.BranchId&FromDate=@ViewBag.FromDate.ToString("MM-dd-yyyy")&ToDate=@ViewBag.ToDate.ToString("MM-dd-yyyy")&Page=cash flow">
                                        @(String.Format("{0:0.##}", (ViewBag.NetProfitLoss)))
                                    </a>
                                    Balance = Balance + (item.Credit - item.Debit);
                                }
                            </td>
                        </tr>
                    }
                }

                <tr>
                    <td>@item.AccountName</td>
                    <td>@item.AccountNumber</td>
                    <td>
                        @{
                            <a href="/accountsreports/AccountTransactions?AccountId=@item.AccountId&AccountName=@item.AccountName&BranchId=@ViewBag.BranchId&FromDate=@ViewBag.FromDate.ToString("MM-dd-yyyy")&ToDate=@ViewBag.ToDate.ToString("MM-dd-yyyy")&Page=cash flow">
                                @(String.Format("{0:0.##}", (item.Credit - item.Debit)))
                            </a>

                            Balance = Balance + (item.Credit - item.Debit);
                        }
                    </td>
                </tr>
                showTotal = true;
            }
            if (showTotal == true)
            {
                if (accountType.AccountSubType == "Cash Flow from Operating Activities")
                {
                    OperatingActivities = Balance;
                }
                else if (accountType.AccountSubType == "Cash Flow from Investing Activities")
                {
                    InvestingActivities = Balance;
                }
                else if (accountType.AccountSubType == "Cash Flow from Financing Activities")
                {
                    FinancingActivities = Balance;
                }

                <tr class="">
                    <td class="text-bold" colspan="2">Net cash provided by @accountType.AccountSubType</td>
                    <td class="text-bold">
                        @(String.Format("{0:0.##}", Balance))
                    </td>
                </tr>
            }
        }
        <tr class="">
            <td class="text-bold text-center" colspan="2">Net Change in cash</td>
            <td class="text-bold">
                @(String.Format("{0:0.##}", (OperatingActivities + InvestingActivities + FinancingActivities)))
            </td>
        </tr>
    </tbody>
}

