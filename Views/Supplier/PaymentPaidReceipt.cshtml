<section class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="printableArea">
                            <div class="row">
                                <div class="col-12">
                                    <h5>
                                        <img src="@ViewBag.BusinessSetting.BusinessLogo" height="60" />
                                        @*<i class="fas fa-globe"></i> AdminLTE, Inc.*@
                                        <small class="float-right" style="line-height:24px">
                                            <b>Payment Date: </b>@ViewBag.User.Payment.PaymentDate.ToString(ViewBag.BusinessSetting.DateFormat + " " + ViewBag.BusinessSetting.TimeFormat)<br>
                                            <b>Reference No: </b>@ViewBag.User.Payment.ReferenceNo<br>
                                            <b>Payment Mode: </b>@ViewBag.User.Payment.PaymentType<br>
                                        </small>
                                    </h5>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- info row -->
                            <div class="row invoice-info">
                                <!-- /.col -->
                                <div class="col-sm-4 invoice-col">
                                    <i>Business Location</i>
                                    <address>
                                        <strong>@ViewBag.BusinessSetting.BusinessName (@ViewBag.User.Branch.Branch)</strong><br>
                                        @ViewBag.User.Branch.Address<br />@ViewBag.User.Branch.City, @ViewBag.User.Branch.State,
                                        @ViewBag.User.Branch.Country, @ViewBag.User.Branch.Zipcode <br />
                                        Phone: @ViewBag.User.Branch.Mobile<span class="@(ViewBag.User.Branch.AltMobileNo == null?"hidden":"")">,@ViewBag.User.Branch.AltMobileNo</span><br />
                                        @if (ViewBag.User.Branch.Email != null)
                                        {
                                            <span>Email: @ViewBag.User.Branch.Email</span><br>
                                        }
                                        @if (ViewBag.User.Branch.Tax != null)
                                        {
                                            <span>@ViewBag.User.Branch.Tax: @ViewBag.User.Branch.TaxNo</span><br />
                                        }
                                    </address>
                                </div>
                                <div class="col-sm-4 invoice-col">
                                    <i>Payment To<br></i>
                                    <address>
                                        <strong>@ViewBag.User.Name</strong><br>
                                        @if (ViewBag.User.Addresses[0].Address != null && ViewBag.User.Addresses[0].Address != "")
                                        {
                                            @ViewBag.User.Addresses[0].Address<br>
                                            <span>
                                                @ViewBag.User.Addresses[0].City, @ViewBag.User.Addresses[0].State,
                                                @ViewBag.User.Addresses[0].Country, @ViewBag.User.Addresses[0].Zipcode
                                            </span><br />
                                        }
                                        @if (ViewBag.User.MobileNo != null)
                                        {
                                            <span> Phone: @ViewBag.User.MobileNo</span><br />
                                        }
                                        @if (ViewBag.User.EmailId != null)
                                        {
                                            <span>Email: @ViewBag.User.EmailId</span><br>
                                        }
                                        @if (ViewBag.User.TaxNo != null)
                                        {
                                            <span> @ViewBag.User.Tax: @ViewBag.User.TaxNo</span><br />
                                        }

                                    </address>
                                </div>
                                <!-- /.col -->
                                @*@if (ViewBag.User.IsShippingAddressDifferent == true)
                                    {
                                        <div class="col-sm-4 invoice-col">
                                            <i>Customer Shipping Address<br></i>
                                            <address>
                                                <strong>@ViewBag.User.Addresses[0].Name</strong><br>
                                                @ViewBag.User.Addresses[0].Address<br>
                                                Phone: @ViewBag.User.Addresses[0].MobileNo<br />
                                                Email: @ViewBag.User.Addresses[0].EmailId <br>
                                            </address>
