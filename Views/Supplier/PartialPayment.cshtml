



@{
    var count = 1;
    <thead id="thead">
        <tr>
            <th>Sln</th>
            <th class="hide noPrint">Action</th>
            <th>Date</th>
            <th>Reference No</th>
            <th>Supplier Name</th>
            <th>Supplier Mobile No</th>
            <th>Amount</th>
            <th>Payment Method</th>
            <th>Unused Amount</th>
            @*<th>Added By</th>
                <th>Added On</th>
                <th>Last Modified By</th>
                <th>Last Modified On</th>*@

        </tr>
    </thead>
    <tbody class="table-body">
        @foreach (var item in ViewBag.SupplierPayments)
        {
            <tr>
                <td>@(ViewBag.PageSize * (ViewBag.PageIndex - 1)+count)</td>
                <td class="noPrint">
                    <div class="btn-group">
                        <button type="button" class="btn btn-info">Action</button>
                        <button type="button" class="btn btn-info dropdown-toggle dropdown-icon" data-toggle="dropdown">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" role="menu">
                            @*@if (ViewBag.AccountsPermission.IsEdit)
                                {
                                    <a class="dropdown-item" href="/banking/contraedit?ContraId=@item.SupplierPaymentId" id="Pay"><i class="fas fa-edit"></i> Edit</a>
                                }*@
                            <a class="dropdown-item" href="javascript:void(0)" id="" onclick="View(@item.SupplierPaymentId)"><i class="fas fa-eye"></i> View</a>
                            @*<a class="dropdown-item" href="javascript:void(0)" id="" onclick="openInvoiceCopyModal('@ViewBag.InvoiceUrl/purchase/PaymentReceipt?ReferenceId=@item.ReferenceId','@item.ReferenceNo')"><i class="fas fa-copy"></i> Receipt Url</a>*@
                            @if (ViewBag.SupplierRefundPermission.IsAdd)
                            {
                                if (item.AmountRemaining != 0)
                                {
                                    <a class="dropdown-item" href="javascript:void(0)" id="Pay" onclick="openRefundModal(true,@item.SupplierPaymentId,'Refund',@item.BranchId)"><i class="fas fa-plus"></i> Add Refund</a>
                                }
                            }
                            @*@if (ViewBag.SupplierRefundPermission.IsView)
                                {
                                    <a class="dropdown-item" href="javascript:void(0)" id="Pay" onclick="openRefundModal(false,@item.SupplierPaymentId,'Refund')"><i class="fas fa-money-bill"></i> View Refunds</a>
                                }*@
                            @if (item.AmountRemaining != 0)
                            {
                                <a class="dropdown-item" href="javascript:void(0)" id="Pay" onclick="openUnpaidInvoicesModal(@item.SupplierId,@item.SupplierPaymentId)"><i class="fas fa-money-bill"></i> Apply To Invoices</a>
                            }
                            @if (ViewBag.SupplierPaymentPermission.IsDelete)
                            {
                                <a class="dropdown-item" href="javascript:void(0)" id="Pay" onclick="Delete(@item.SupplierPaymentId,'@item.ReferenceNo',@Json.Encode(item.IsDirectPayment))"><i class="fas fa-trash-alt"></i> Delete</a>
                                @*if (item.IsCancelled == false)
                                {
                                    <a class="dropdown-item" href="javascript:void(0)" id="Pay" onclick="Cancel(@item.SupplierPaymentId,'@item.ReferenceNo',@Json.Encode(item.IsDirectPayment))"><i class="fas fa-trash-alt"></i> Cancel</a>
                                }*@
                                @*<a class="dropdown-item" href="javascript:void(0)" id="Pay" onclick="Delete(@item.AccountId,'@item.AccountNumber')"><i class="fas fa-power-off"></i> Close</a>*@
                            }
                            <a class="dropdown-item" href="javascript:void(0)" id="" onclick="openInvoiceCopyModal('@ViewBag.InvoiceUrl/purchase/PaymentReceipt?ReferenceId=@item.ReferenceId','@item.ReferenceNo')"><i class="fas fa-copy"></i> Receipt Url</a>
                            @*@if (item.IsAdvance == true)
                            {*@
                                <a class="dropdown-item" href="javascript:void(0)" onclick="openNotificationModal('Purchase Bill Payment',@item.SupplierPaymentId)"><i class="fas fa-envelope"></i> Send Notification</a>
                            @*}*@
                        </div>
                    </div>
                </td>
                <td>
                    @item.PaymentDate.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1] + " " + Request.Cookies["BusinessSetting"].Value.Split('&')[1].Split('=')[1])
                </td>
                <td>@item.ReferenceNo</td>
                <td>@item.SupplierName</td>
                <td>@item.SupplierMobileNo</td>
                <td>@item.Amount</td>
                <td>@item.PaymentType</td>
                <td>@item.AmountRemaining</td>
                @*<td>@item.AddedByCode</td>
                    <td>@item.AddedOn.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1] + " " + Request.Cookies["BusinessSetting"].Value.Split('&')[1].Split('=')[1])</td>
                    <td>@item.ModifiedByCode</td>
                    <td>@(item.ModifiedOn != null ? item.ModifiedOn.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1] + " " + Request.Cookies["BusinessSetting"].Value.Split('&')[1].Split('=')[1]) : "")</td>*@
                @*<td class="hide noPrint">
                        @if (ViewBag.AccountsPermission.IsEdit)
                        {
                            <a href="/accounts/Accountedit?AccountId=@item.AccountId" class="btn btn-success btn-sm" id="Edit" data-toggle="tooltip" data-placement="bottom" title="Edit"> <i class="fas fa-edit"></i></a>
                        }
                        @if (ViewBag.AccountsPermission.IsDelete)
                        {
                            <a href="javascript:void(0)" onclick="Delete(@item.AccountId,'@item.AccountNumber')" class="btn btn-danger btn-sm" id="Delete" data-toggle="tooltip" data-placement="bottom" title="Delete"><i class="far fa-trash-alt"></i></a>
                        }

                    </td>*@
            </tr>
            count++;
        }
    </tbody>
    <tbody class="hide noPrint">
        <tr></tr>
        <tr>
            <td colspan="11">
                <div class="dataTables_info" id="tblUserRole_info_custom" role="status" aria-live="polite">Showing @(ViewBag.PageSize * (ViewBag.PageIndex - 1)+1) to @(ViewBag.PageSize* ViewBag.CurrentPageIndex) of @ViewBag.TotalCount entries</div>
                @if (ViewBag.PageCount > 1)
                {
                    int j = 0;
                    <div class="dataTables_paginate paging_simple_numbers" id="tblUserRole_paginate_custom" style="float:right">
                        <ul class="pagination">
                            @if (ViewBag.CurrentPageIndex > 1)
                            {
                                <li class="paginate_button page-item previous" id="tblUserRole_previous">
                                    <a onclick="fetchList(1)" href="javascript:void(0)" aria-controls="tblUserRole" data-dt-idx="0" tabindex="0" class="page-link">First</a>
                                </li>
                                <li class="paginate_button page-item previous" id="tblUserRole_previous">
                                    <a onclick="fetchList(@(ViewBag.CurrentPageIndex - 1))" href="javascript:void(0)" aria-controls="tblUserRole" data-dt-idx="0" tabindex="0" class="page-link">Previous</a>
                                </li>
                            }
                            @for (int i = ViewBag.CurrentPageIndex; i <= ViewBag.PageCount; i++)
                            {
                                <li class="@(i == ViewBag.CurrentPageIndex ? "paginate_button page-item active" : "paginate_button page-item")">
                                    <a onclick="fetchList(@i)" href="javascript:void(0)" aria-controls="tblUserRole" data-dt-idx="1" tabindex="0" class="page-link">@(i)</a>
                                </li>
                                if (j == 10)
                                {
                                    i = ViewBag.PageCount + 1;
                                }
                                j++;
                            }
                            @if (ViewBag.CurrentPageIndex < ViewBag.PageCount)
                            {
                                <li class="paginate_button page-item next" id="tblUserRole_next">
                                    <a onclick="fetchList(@(ViewBag.CurrentPageIndex + 1))" href="javascript:void(0)" aria-controls="tblUserRole" data-dt-idx="2" tabindex="0" class="page-link">Next</a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </td>
        </tr>
    </tbody>
}
<script type="text/javascript">
    $('#divAsof').text('Showing Results: (' + @Html.Raw(Json.Encode(ViewBag.FromDate.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1]) + " - " + ViewBag.ToDate.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1])))+')');
    $('#divTotalCount').text('Total : '+@Html.Raw(Json.Encode(ViewBag.TotalCount)));
    @*$('#divActiveCount').text('Active : '+@Html.Raw(Json.Encode(ViewBag.ActiveCount)));
    $('#divInactiveCount').text('In-Active : '+@Html.Raw(Json.Encode(ViewBag.InactiveCount)));*@
</script>

