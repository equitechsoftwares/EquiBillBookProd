<!-- Brand Logo -->
<a href="/Dashboard" class="brand-link">
    <!-- Icon - always visible -->
    <div class="brand-icon">
        @{
            if (ViewBag.WhitelabelType == 2)
            {
                <span class="brand-initials font-weight-bold">@ViewBag.BusinessSetting.BusinessName.Substring(0, Math.Min(2, ViewBag.BusinessSetting.BusinessName.Length))</span>
            }
            else
            {
                <img src="@(Request.Cookies["data"] != null && Request.Cookies["data"]["WhitelabelBusinessIcon"] != null ? Request.Cookies["data"]["WhitelabelBusinessIcon"] : "")" alt="" />
            }
        }
    </div>
    <!-- Brand text - shows on expanded or hover -->
    @{
        if (ViewBag.WhitelabelType == 2)
        {
            <span class="brand-text font-weight-bold">@ViewBag.BusinessSetting.BusinessName</span>
        }
        else
        {
            <span class="brand-text font-weight-bold">@(Request.Cookies["data"] != null && Request.Cookies["data"]["WhitelabelBusinessName"] != null ? Request.Cookies["data"]["WhitelabelBusinessName"] : "")</span>
        }
    }
</a>
