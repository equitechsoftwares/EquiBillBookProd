@*@using EquiBillBook.Models;*@
<!-- Brand Logo -->
<a href="/admindashboard" class="brand-link">
    <!-- Icon - always visible -->
    <div class="brand-icon">
        @{
            <img src="@(Request.Cookies["adata"] != null && Request.Cookies["adata"]["WhitelabelBusinessIcon"] != null ? Request.Cookies["adata"]["WhitelabelBusinessIcon"] : "")" alt="" />
        }
    </div>
    <!-- Brand text - shows on expanded or hover -->
    @{
        <span class="brand-text font-weight-bold">@(Request.Cookies["adata"] != null && Request.Cookies["adata"]["WhitelabelBusinessName"] != null ? Request.Cookies["adata"]["WhitelabelBusinessName"] : "")</span>
    }
</a>
