                <tr class="bg-blue">
                    <th style="">#</th>
                    <th>Date</th>
                    <th>Invoice No</th>
                    <th>Customer Name</th>
                    <th>Customer Mobile No</th>
                    @*<th>Total Quantity</th>*@
                    <th>Grand Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tbodyid">
                @{
                    if (ViewBag.Finals != null)
                    {
                        var count = 1;
