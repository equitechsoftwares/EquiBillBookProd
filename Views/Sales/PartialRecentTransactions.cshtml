                                    }
                                </td>
                                <td>@item.CustomerName</td>
                                <td>@item.CustomerMobileNo</td>
                                @*<td style="text-align:right;">@item.TotalQuantity</td>*@
                                <td style="text-align:right;">
                                    @{
                                        if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                                        {
                                            @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@item.GrandTotal
                                        }
                                        else
                                        {
                                            @item.GrandTotal@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                                        }
                                    }
                                </td>
                                <td>
                                    @*@if (ViewBag.MenuPermission.IsEdit)
        {
            if (!item.IsSalesReturn)
            {
                <a href="/Sales/posedit?SalesId=@item.SalesId" class="btn btn-success btn-sm" id="Edit" data-toggle="tooltip" data-placement="bottom" title="Edit"> <i class="fas fa-edit"></i></a>
            }
        }*@
                                    <a href="javascript:void(0)" onclick="PrintInvoice('@ViewBag.InvoiceUrl/sales/receipt?InvoiceId=@item.InvoiceId')" class="btn btn-primary btn-sm" id="Edit" data-toggle="tooltip" data-placement="bottom" title="Print"> <i class="fas fa-file"></i></a>
                                    <a href="javascript:void(0)" onclick="openNotificationModal('Sales Invoice',@item.SalesId)" class="btn btn-secondary btn-sm"><i class="fas fa-envelope"></i></a>
                                    @*@if (ViewBag.MenuPermission.IsDelete)
        {
            <a href="javascript:void(0)" onclick="Delete(@item.SalesId,'divFinal@(count)')" class="btn btn-danger btn-sm" id="Delete" data-toggle="tooltip" data-placement="bottom" title="Delete"><i class="far fa-trash-alt"></i></a>
        }*@
                                </td>
                            </tr>
                            count++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
