@if (ViewBag.Sale.Status != "Draft" && ViewBag.OnlinePaymentSetting != null)
{
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script src="https://www.paypal.com/sdk/js?client-id=@(ViewBag.OnlinePaymentSetting.PaypalClientId)&currency=@(ViewBag.OnlinePaymentSetting.PaypalCurrencyCode)"></script>

    <script>
    var SalesId = 0;
    var OnlinePaymentSettingsId = @Html.Raw(Json.Encode(ViewBag.OnlinePaymentSetting.OnlinePaymentSettingsId));

    $(document).ready(function () {
        if (@Html.Raw(Json.Encode(ViewBag.OnlinePaymentSetting.OnlinePaymentService)) == 1) {
            InititatePaypal(@Html.Raw(Json.Encode(ViewBag.Sale.Due)));
            $('#btnRazorPay').hide();
        }
        else {
            $('#paypal-button-container').remove();
            $('#btnRazorPay').show();
        }
    });

    function InititatePaypal(PayableCost) {
        $('#paypal-button-container').remove();
        $('#divPaypal').append('<div class="" id="paypal-button-container" ></div>');

        paypal.Buttons({
            style: {
                layout: 'horizontal',
                color: 'blue',
                shape: 'rect',
                label: 'pay',
                size: 'responsive',
                height: 37,
            },
            createOrder: function (data, actions) {
                return actions.order.create({
                    purchase_units: [{
                        amount: {
                            value: PayableCost
                        }
                    }]
                });
            },
            onApprove: function (data, actions) {
                return actions.order.capture().then(function (orderData) {
                    var transaction = orderData.purchase_units[0].payments.captures[0];
                    LiveTransactionId = transaction.id;
                    PaymentSuccess(transaction.id, 'Paypal');
                });
            }
        }).render('#paypal-button-container');
    }

    function InitiateRazorPay(item) {
        var options = {
            "key": item.OnlinePaymentSetting.RazorpayKey,
            "amount": item.Sale.Due * 100,
            "currency": item.OnlinePaymentSetting.RazorpayCurrencyCode,
            "name": item.BusinessSetting.BusinessName,
            "image": item.BusinessSetting.BusinessLogo,
            "handler": function (response) {
                PaymentSuccess(response.razorpay_payment_id, 'Razor Pay');
            },
            "prefill": {
                "name": item.Sale.User.Name,
                "email": item.Sale.User.EmailId,
                "contact": item.Sale.User.MobileNo
            },
            "notes": {
                "address": ""
            },
            "theme": {
                "color": "#F37254"
            }
        };
        var rzp1 = new Razorpay(options);
        rzp1.open();
    }

    function InitPrice(InvoiceId) {
        var det = {
            InvoiceId: InvoiceId
        };
        $("#divLoading").show();
        $.ajax({
            url: '/sales/InitPaymentGateway',
            datatype: "json",
            data: det,
            type: "post",
            success: function (data) {
                if (data.Status == 0) {
                    //if (EnableSound == 'True') {document.getElementById('error').play();}
                    toastr.error(data.Message);
                }
                else {
                    SalesId = data.Data.Sale.SalesId;
                    InitiateRazorPay(data.Data);
                }
                $("#divLoading").hide();
            },
            error: function (xhr) {
                $("#divLoading").hide();
            }
        });
    }

    function PaymentSuccess(LiveTransactionId, PaymentGatewayType) {
        var det = {
            SalesId: SalesId,
            ReferenceNo: LiveTransactionId,
            PaymentGatewayType: PaymentGatewayType,
            PaymentMethodType: '',
            OnlinePaymentSettingsId: OnlinePaymentSettingsId,
            Type:'sales payment'
        };
        $("#divLoading").show();
        $.ajax({
            url: '/sales/InsertPaymentOnline',
            datatype: "json",
            data: det,
            type: "post",
            success: function (data) {
                if (data.Status == 0) {
                    //if (EnableSound == 'True') {document.getElementById('error').play();}
                    toastr.error(data.Message);
                }
                else {
                    //alert(data.Message);
                    window.location.reload();
                }
                $("#divLoading").hide();
            },
            error: function (xhr) {
                $("#divLoading").hide();
            }
        });
    }
    </script>
}

<script>
    function printInvoice() {
        window.print();
    }

    function exportInvoiceToPdf() {
        $('.noPrint').hide();
        $('.responsive-table').css('height', '100%');
        html2canvas($('.invoice-container')[0], {
            backgroundColor: null,
            useCORS: true,
            scale: 2
        }).then(function (canvas) {
                var data = canvas.toDataURL();
                var docDefinition = {
                    content: [{
                        image: data,
                        width: 500
                    }]
                };

                pdfMake.createPdf(docDefinition).download("Invoice.pdf");
                $('.responsive-table').css('height', '400px');
            $('.noPrint').show();
        });
    }
</script>