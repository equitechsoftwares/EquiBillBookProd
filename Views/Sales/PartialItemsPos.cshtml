@{
    if (ViewBag.ItemDetails != null)
    {
        foreach (var item in ViewBag.ItemDetails)
        {
            <div class="col-12 col-sm-6 col-md-6 d-flex align-items-stretch flex-column">
                <a href="javascript:void(0)" class="card bg-light d-flex flex-fill" onclick="fetchItem('@item.SKU')">
                    <div class="card-body p-2">
                        <div class="text-center">
                            @if (ViewBag.PosSetting.ShowItemImage == true)
                            {
                                <img src="@item.ProductImage" alt="user-avatar" class="img-size-64 mb-2">
                            }

                            <h6 class="mb-1 text-truncate" style="font-size: 0.9rem;"><b>@item.ItemName - @item.VariationName</b></h6>
                            <p class="text-muted mb-0" style="font-size: 0.8rem;"><b>@item.SKU</b></p>
                            @*<span class=" bg-cyan p-2">Quantity : @item.Quantity </span>*@
                        </div>
                    </div>
                </a>
            </div>
        }
    }

}
