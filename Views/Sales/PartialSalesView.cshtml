                                                                            <a href="javascript:void(0)" onclick="openInvoiceCopyModal('@ViewBag.InvoiceUrl/sales/ReturnPaymentReceipt?ReferenceId=@item.ReferenceId','@refNo')" class="btn btn-secondary btn-sm" id="View" data-toggle="tooltip" data-placement="bottom" title="Receipt Url"><i class="fas fa-copy"></i></a>
                                                                        }*@
                                                                }
                                                            </td>
                                                        </tr>
                                                        index++;
                                                    }
                                                }
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    @if (ViewBag.IsAccountsAddon == true && ViewBag.Sale.Status != "Draft")
                    {
                        <div class="card card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Journal</h3>
                            </div>
                            <div class="card-body">
                                <div class="row table-responsive">
                                    <table class="table table-bordered table-striped">
                                        @{
                                            <thead id="thead">
                                                <tr>
                                                    <th>Account Name</th>
                                                    <th>Debit</th>
                                                    <th>Credit</th>
                                                </tr>
                                            </thead>
                                            <tbody class="table-body">
                                                @foreach (var item in ViewBag.BankPayments)
                                                {
                                                    if (item.Debit != 0 || item.Credit != 0 || item.IsTaxAccount == true)
                                                    {
                                                        <tr>
                                                            <td>@item.AccountName</td>
