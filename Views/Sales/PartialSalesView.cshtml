                                    <div class="form-group divStatus_ctrl">
                                        <label>Status</label>
                                        <div class="input-group">
                                            @{
                                                if (ViewBag.Sale.Status == "Draft")
                                                {
                                                    <span>Draft</span>
                                                }
                                                if (ViewBag.Sale.Status == "Due")
                                                {
                                                    <span>Sent</span>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>

                                @if (ViewBag.Sale.ParentId != 0)
                                {
                                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 divSalesInvoice">
                                        <div class="form-group">
                                            <label>Sales Invoice</label>
                                            @foreach (var item in ViewBag.SalesInvoices)
                                            {
                                                if (ViewBag.Sale.ParentId == item.SalesId)
                                                {
                                                    <span>@item.InvoiceNo</span>
                                                }
                                            }
                                        </div>
                                    </div>
