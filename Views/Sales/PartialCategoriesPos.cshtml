@{
    if (ViewBag.Categories != null)
    {
        <div class="col-12 col-sm-6 col-md-6 d-flex align-items-stretch flex-column">
            <div class="card bg-light d-flex flex-fill">
                <div class="card-body p-4">
                    <div class="text-center">
                        <h6 class="mb-1 text-truncate" style="font-size: 0.9rem;"><b>All Categories</b></h6>
                    </div>
                    <!-- OK and Next buttons inside All Sub Categories card -->
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <button type="button" class="btn btn-success btn-sm px-3" onclick="ItemsPos('category','0')">
                            <i class="fas fa-check"></i>
                        </button>
                        @* <button type="button" class="btn btn-primary btn-sm px-3 ml-2" onclick="handleNextClick()">
                                <i class="fas fa-arrow-right"></i>
                            </button> *@
                    </div>
                </div>
            </div>
        </div>
        foreach (var item in ViewBag.Categories)
        {
            <div class="col-12 col-sm-6 col-md-6 d-flex align-items-stretch flex-column">
                <div class="card bg-light d-flex flex-fill">
                    <div class="card-body p-4">
                        <div class="text-center">
                            <h6 class="mb-1 text-truncate" style="font-size: 0.9rem;"><b>@item.Category</b></h6>
                        </div>
                        <!-- OK and Next buttons inside each category card -->
                        <div class="d-flex justify-content-center gap-2 mt-3">
                            <button type="button" class="btn btn-success btn-sm px-3"
                                    onclick="ItemsPos('category',@item.CategoryId)">
                                <i class="fas fa-check"></i>
                            </button>
                            <button type="button" class="btn btn-primary btn-sm px-3 ml-2"
                                    onclick="fetchActiveSubCategories(@item.CategoryId)">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}
