

@using System;
@using System.Web;
@{
    var count = 1;
    <thead id="thead">
        <tr>
            <th>Sln</th>
            <th class="hide noPrint">Action</th>
            <th>Catalogue Name</th>
            <th>Slug</th>
            <th>Type</th>
            <th>Location</th>
            <th>Valid From</th>
            <th>Valid To</th>
            <th class="hidden">Status</th>
            <th class="hide">Status</th>
        </tr>
    </thead>
    <tbody class="table-body">
        @foreach (var item in ViewBag.Catalogues)
        {
        <tr>
            @{
                string qrImage = Convert.ToString(item.QRCodeImage);
                bool hasQrImage = !string.IsNullOrEmpty(qrImage);
                string safeSlug = HttpUtility.JavaScriptStringEncode(Convert.ToString(item.UniqueSlug));
            }
            <td>@(ViewBag.PageSize * (ViewBag.PageIndex - 1) + count)</td>
            <td class="hide noPrint">
                <div class="btn-group">
                    <button type="button" class="btn btn-info">Action</button>
                    <button type="button" class="btn btn-info dropdown-toggle dropdown-icon" data-toggle="dropdown">
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <div class="dropdown-menu" role="menu">
                        @if (ViewBag.MenuPermission.IsEdit)
                        {
                            <a class="dropdown-item" href="/catalogue/edit?CatalogueId=@item.CatalogueId"><i class="fas fa-edit"></i> Edit</a>
                        }
                        <a class="dropdown-item" href="javascript:void(0)" onclick="View(@item.CatalogueId)"><i class="fas fa-eye"></i> View</a>
                        @if (ViewBag.MenuPermission.IsDelete)
                        {
                            <a class="dropdown-item" href="javascript:void(0)" onclick="Delete(@item.CatalogueId,'@Html.Raw(HttpUtility.JavaScriptStringEncode(item.CatalogueName))')"><i class="far fa-trash-alt"></i> Delete</a>
                        }
                        <div class="dropdown-divider"></div>
                        @if (item.IsActive)
                        {
                            <a class="dropdown-item" href="/c/@item.UniqueSlug" target="_blank"><i class="fas fa-external-link-alt"></i> View Public Catalogue</a>
                            <a class="dropdown-item" href="javascript:void(0)" onclick="copyCatalogueUrl('@safeSlug')"><i class="fas fa-copy"></i> Copy Public URL</a>
                            <a class="dropdown-item" href="javascript:void(0)" onclick="shareCatalogue('@safeSlug')"><i class="fas fa-share-alt"></i> Share</a>
                            <div class="dropdown-divider"></div>
                            if (hasQrImage)
                            {
                                string qrImageUrl = Url.Content(qrImage);
                                string safeQrImageUrl = HttpUtility.JavaScriptStringEncode(qrImageUrl);
                                <a class="dropdown-item" href="javascript:void(0)" onclick="viewCatalogueQRCode('@safeSlug', '@HttpUtility.JavaScriptStringEncode(item.CatalogueName)', '@safeQrImageUrl')"><i class="fas fa-qrcode"></i> View QR Code</a>
                                <a class="dropdown-item" href="@qrImageUrl" download="Catalogue-@item.UniqueSlug-QR.png"><i class="fas fa-download"></i> Download QR Code</a>
                            }
                        }

                    </div>
                </div>
            </td>
            <td>@item.CatalogueName</td>
            <td>@item.UniqueSlug</td>
            <td>@item.CatalogueTypeText</td>
            <td>@item.BranchName</td>
            <td>@(item.ValidFrom != null ? ((DateTime)item.ValidFrom).ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1]) : "")</td>
            <td>@(item.NeverExpires == true ? "Never" : item.ValidTo != null ? ((DateTime)item.ValidTo).ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1]) : "")</td>
            <td class="hidden">@(item.IsActive == true ? "Active" : "Inactive")</td>
            <td class="hide">
                @if (item.IsActive)
                {
                    if (ViewBag.MenuPermission.IsEdit)
                    {
                        <input class="chkIsActive" type="checkbox" onchange="ActiveInactive(@item.CatalogueId,false)" checked data-on="Active" data-off="In Active" data-toggle="toggle" data-onstyle="success" data-offstyle="danger" data-width="100" data-height="25" data-style="design">
                    }
                    else
                    {
                        <input disabled class="chkIsActive" type="checkbox" checked data-on="Active" data-off="In Active" data-toggle="toggle" data-onstyle="success" data-offstyle="danger" data-width="100" data-height="25" data-style="design">
                    }
                }
                else
                {
                    if (ViewBag.MenuPermission.IsEdit)
                    {
                        <input class="chkIsActive" type="checkbox" onchange="ActiveInactive(@item.CatalogueId,true)" data-on="Active" data-off="In Active" data-toggle="toggle" data-onstyle="success" data-offstyle="danger" data-width="100" data-height="25" data-style="design">
                    }
                    else
                    {
                        <input disabled class="chkIsActive" type="checkbox" data-on="Active" data-off="In Active" data-toggle="toggle" data-onstyle="success" data-offstyle="danger" data-width="100" data-height="25" data-style="design">
                    }

                }
            </td>
        </tr>
            count++;
        }
    </tbody>
    <tbody class="hide noPrint">
        <tr></tr>
        <tr>
            <td colspan="10">
                <div class="dataTables_info" id="tblUserRole_info_custom" role="status" aria-live="polite">Showing @(ViewBag.PageSize * (ViewBag.PageIndex - 1) + 1) to @(ViewBag.PageSize * ViewBag.CurrentPageIndex) of @ViewBag.TotalCount entries</div>
                @if (ViewBag.PageCount > 1)
                {
                    int j = 0;
                    <div class="dataTables_paginate paging_simple_numbers" id="tblUserRole_paginate_custom" style="float:right">
                        <ul class="pagination">
                            @if (ViewBag.CurrentPageIndex > 1)
                            {
                                <li class="paginate_button page-item previous" id="tblUserRole_previous">
                                    <a onclick="fetchList(1)" href="javascript:void(0)" aria-controls="tblUserRole" data-dt-idx="0" tabindex="0" class="page-link">First</a>
                                </li>
                                <li class="paginate_button page-item previous" id="tblUserRole_previous">
                                    <a onclick="fetchList(@(ViewBag.CurrentPageIndex - 1))" href="javascript:void(0)" aria-controls="tblUserRole" data-dt-idx="0" tabindex="0" class="page-link">Previous</a>
                                </li>
                            }
                            @for (int i = ViewBag.CurrentPageIndex; i <= ViewBag.PageCount; i++)
                            {
                                <li class="@(i == ViewBag.CurrentPageIndex ? "paginate_button page-item active" : "paginate_button page-item")">
                                    <a onclick="fetchList(@i)" href="javascript:void(0)" aria-controls="tblUserRole" data-dt-idx="1" tabindex="0" class="page-link">@(i)</a>
                                </li>
                                if (j == 10)
                                {
                                    i = ViewBag.PageCount + 1;
                                }
                                j++;
                            }
                            @if (ViewBag.CurrentPageIndex < ViewBag.PageCount)
                            {
                                <li class="paginate_button page-item next" id="tblUserRole_next">
                                    <a onclick="fetchList(@(ViewBag.CurrentPageIndex + 1))" href="javascript:void(0)" aria-controls="tblUserRole" data-dt-idx="2" tabindex="0" class="page-link">Next</a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </td>
        </tr>
    </tbody>
}
<script type="text/javascript">
    $('#divTotalCount').text('Total : '+@Html.Raw(Json.Encode(ViewBag.TotalCount)));
    $('#divActiveCount').text('Active : '+@Html.Raw(Json.Encode(ViewBag.ActiveCount)));
    $('#divInactiveCount').text('In-Active : '+@Html.Raw(Json.Encode(ViewBag.InactiveCount)));
    
    if (typeof window.copyCatalogueUrl !== 'function') {
        window.copyCatalogueUrl = function (slug) {
            var url = window.location.origin + '/c/' + slug;

            var tempInput = document.createElement('input');
            tempInput.value = url;
            document.body.appendChild(tempInput);
            tempInput.focus();
            tempInput.select();
            document.execCommand('copy');
            document.body.removeChild(tempInput);

            toastr.success('Catalogue URL copied to clipboard: ' + url);
        };
    }

    if (typeof window.shareCatalogue !== 'function') {
        window.shareCatalogue = function (slug) {
            if (navigator.share) {
                var shareUrl = window.location.origin + '/c/' + slug;
                navigator.share({
                    title: document.title,
                    text: 'Check out this catalogue',
                    url: shareUrl
                }).catch(function (error) {
                    if (error && error.name !== 'AbortError') {
                        copyCatalogueUrl(slug);
                    }
                });
            }
            else {
                copyCatalogueUrl(slug);
            }
        };
    }
</script>

