                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="content-row">
                <div class="item-desc">

                    @if (ViewBag.DeliveryChallan.Notes != "" && ViewBag.DeliveryChallan.Notes != null)
                    {
                        <div class="item-desc">
                            <p><i class="fas fa-sticky-note"></i> <strong>Notes:</strong> </p>
                            <p>@Html.Raw(ViewBag.DeliveryChallan.Notes)</p>
                        </div>
                    }
                    @if (ViewBag.DeliveryChallan.Terms != "" && ViewBag.DeliveryChallan.Terms != null)
                    {
                        <div class="item-desc mt-4">
                            <p><i class="fas fa-sticky-note"></i> <strong>Terms & Conditions:</strong> </p>
                            <p>@Html.Raw(ViewBag.DeliveryChallan.Terms)</p>
                        </div>
                    }
                </div>

                <div class="summary-section">
                    <div class="table-header">
                        <h4><i class="fas fa-calculator"></i> Challan Summary</h4>
                    </div>
                    <table class="summary-table">
                        <tbody>
                            <tr>
                                <th>Total Qty:</th>
                                <td>@(String.Format("{0:0.##}", ViewBag.DeliveryChallan.TotalQuantity))</td>
                            </tr>
                            <tr>
                                <th>Gross Amount:</th>
                                <td>
                                    @if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                    {
                                        @ViewBag.BusinessSetting.CurrencySymbol@(String.Format("{0:0.##}", ViewBag.DeliveryChallan.Subtotal))
                                    }
                                    else
                                    {
                                        @(String.Format("{0:0.##}", ViewBag.DeliveryChallan.Subtotal))@ViewBag.BusinessSetting.CurrencySymbol
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Discount:</th>
                                <td>
                                    @if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                    {
                                        @ViewBag.BusinessSetting.CurrencySymbol@(String.Format("{0:0.##}", ViewBag.DeliveryChallan.TotalDiscount))
                                    }
                                    else
                                    {
                                        @(String.Format("{0:0.##}", ViewBag.DeliveryChallan.TotalDiscount))@ViewBag.BusinessSetting.CurrencySymbol
                                    }
                                </td>
                            </tr>
                            @foreach (var item in ViewBag.DeliveryChallan.DeliveryChallanAdditionalCharges)
                            {
                                if (item.AmountExcTax != 0)
                                {
                                    <tr>
                                        <th>@item.Name:</th>
                                        <td>
                                            @if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                            {
                                                @ViewBag.BusinessSetting.CurrencySymbol@(String.Format("{0:0.##}", item.AmountExcTax))
                                            }
                                            else
                                            {
                                                @(String.Format("{0:0.##}", item.AmountExcTax))@ViewBag.BusinessSetting.CurrencySymbol
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            @foreach (var item in ViewBag.Taxs)
                            {
                                <tr>
                                    <th>@item.Tax:</th>
                                    <td>
                                        @if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                        {
                                            @ViewBag.BusinessSetting.CurrencySymbol@(String.Format("{0:0.##}", item.TaxAmount))
                                        }
                                        else
                                        {
                                            @(String.Format("{0:0.##}", item.TaxAmount))@ViewBag.BusinessSetting.CurrencySymbol
                                        }
                                    </td>
                                </tr>
                            }
                            @if (ViewBag.DeliveryChallan.SpecialDiscount != 0)
                            {
                                <tr>
                                    <th>Special Discount:</th>
                                    <td>
                                        @if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                        {
                                            @ViewBag.BusinessSetting.CurrencySymbol@ViewBag.DeliveryChallan.SpecialDiscount
                                        }
                                        else
                                        {
                                            @ViewBag.DeliveryChallan.SpecialDiscount@ViewBag.BusinessSetting.CurrencySymbol
                                        }
                                    </td>
                                </tr>
                            }
                            <tr class="total-row">
                                <th>Net Amount:</th>
                                <td>
                                    @if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                    {
                                        @ViewBag.BusinessSetting.CurrencySymbol@(String.Format("{0:0.##}", ViewBag.DeliveryChallan.NetAmount))
                                    }
                                    else
                                    {
                                        @(String.Format("{0:0.##}", ViewBag.DeliveryChallan.NetAmount))@ViewBag.BusinessSetting.CurrencySymbol
                                    }
                                </td>
                            </tr>
                            @if (ViewBag.DeliveryChallan.RoundOff != 0)
                            {
                                <tr>
                                    <th>Round Off:</th>
                                    <td>
                                        @if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                        {
                                            @ViewBag.BusinessSetting.CurrencySymbol@(String.Format("{0:0.##}", ViewBag.DeliveryChallan.RoundOff))
                                        }
                                        else
                                        {
                                            @(String.Format("{0:0.##}", ViewBag.DeliveryChallan.RoundOff))@ViewBag.BusinessSetting.CurrencySymbol
                                        }
                                    </td>
                                </tr>
                            }
                            <tr class="total-row">
                                <th>Total:</th>
                                <td>
                                    @if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                    {
                                        @ViewBag.BusinessSetting.CurrencySymbol@(String.Format("{0:0.##}", ViewBag.DeliveryChallan.GrandTotal))
                                    }
                                    else
                                    {
                                        @(String.Format("{0:0.##}", ViewBag.DeliveryChallan.GrandTotal))@ViewBag.BusinessSetting.CurrencySymbol
                                    }
                                </td>
                            </tr>
                            @if (ViewBag.DeliveryChallan.Status == "Sent" && ViewBag.DeliveryChallan.Due != 0)
                            {
                                <tr class="due-row">
                                    <th>Due:</th>
                                    <td>
                                        @if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                        {
                                            @ViewBag.BusinessSetting.CurrencySymbol@(String.Format("{0:0.##}", ViewBag.DeliveryChallan.Due))
                                        }
                                        else
                                        {
                                            @(String.Format("{0:0.##}", ViewBag.DeliveryChallan.Due))@ViewBag.BusinessSetting.CurrencySymbol
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="footer-note">
                <p><i class="fas fa-info-circle"></i> This is a computer generated delivery challan. No signature is required.</p>
            </div>

            <div class="action-buttons noPrint">
                <a href="javascript:void(0)" onclick="printInvoice()" class="btn btn-warning">
                    <i class="fa fa-print"></i>
                    Print Challan
                </a>
                <a href="javascript:void(0)" onclick="exportInvoiceToPdf()" class="btn btn-secondary">
                    <i class="fa fa-file-pdf"></i>
                    Export PDF
                </a>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.22/pdfmake.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

<script>
    function printInvoice() {
        window.print();
    }

    function exportInvoiceToPdf() {
        $('.noPrint').hide();
        $('.responsive-table').css('height', '100%');
        html2canvas($('.invoice-container')[0], {
            backgroundColor: null,
            useCORS: true,
            scale: 2
        }).then(function (canvas) {
            var data = canvas.toDataURL();
            var docDefinition = {
                content: [{
                    image: data,
                    width: 500
                }]
            };

            pdfMake.createPdf(docDefinition).download("Delivery Challan.pdf");
            $('.responsive-table').css('height', '400px');
            $('.noPrint').show();
        });
    }
</script>