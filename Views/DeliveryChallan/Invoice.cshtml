
@{
    Layout = null;
}
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Delivery Challan | @ViewBag.DeliveryChallan.InvoiceNo</title>
<link rel="shortcut icon" href="favicon.jpeg" type="image/x-icon">
<link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
<link rel="stylesheet" href="~/Content/assets/css/adminlte.min.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
<style>
    @@media print {
        .noPrint {
            display: none !important;
        }
    }

    * {
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.5;
        color: #1f2937;
        background-color: #f9fafb;
        margin: 0;
        padding: 0;
        font-size: 14px;
    }

    .invoice-container {
        max-width: 900px;
        margin: 10px auto;
        background: white;
        border-radius: 8px;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        overflow: hidden;
    }

    .header-section {
        background: white;
        color: #1f2937;
        padding: 24px 32px;
        position: relative;
        border-bottom: 1px solid #e5e7eb;
    }

    .header-content {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        position: relative;
    }

    .logo-container img {
        height: 48px;
        border-radius: 6px;
    }

    .header-text {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }

        .header-text h1 {
            font-size: 24px;
            font-weight: 700;
            margin: 0 0 4px 0;
            color: #1f2937;
        }

        .header-text p {
            font-size: 14px;
            margin: 0;
            color: #6b7280;
        }

    .invoice-content {
        padding: 24px 32px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 24px;
        margin-bottom: 24px;
    }

    .info-card {
        background: #f8fafc;
        padding: 20px;
        border-radius: 6px;
        border-left: 3px solid #3b82f6;
    }

        .info-card h4 {
            font-size: 12px;
            font-weight: 600;
            color: #374151;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin: 0 0 12px 0;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .info-card address {
            margin: 0;
            font-style: normal;
            line-height: 1.6;
            font-size: 13px;
        }

        .info-card strong {
            font-weight: 600;
            color: #111827;
        }

        .info-card i {
            color: #6b7280;
            width: 16px;
            text-align: center;
        }

    .table-container {
        background: white;
        border-radius: 6px;
        overflow: hidden;
        border: 1px solid #e5e7eb;
        margin-bottom: 24px;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 10px;
        padding: 20px;
    }

    .challan-info-grid {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
        padding: 20px;
    }

        .challan-info-grid .detail-item {
            flex: 1;
            text-align: center;
        }

    .detail-item {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .detail-label {
        font-size: 11px;
        color: #6b7280;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        font-size: 14px;
        font-weight: 400;
        color: #111827;
    }

    .table-header {
        background: #f8fafc;
        padding: 16px 20px;
        border-bottom: 1px solid #e5e7eb;
    }

        .table-header h4 {
            margin: 0;
            font-size: 14px;
            font-weight: 600;
            color: #374151;
            display: flex;
            align-items: center;
            gap: 8px;
        }

    .records_table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
        font-size: 13px;
    }

        .records_table thead th {
            background: #f9fafb;
            color: #4b5563;
            font-weight: 600;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 12px 16px;
            text-align: left;
            border-bottom: 1px solid #e5e7eb;
        }

        .records_table tbody td {
            padding: 12px 16px;
            border-bottom: 1px solid #f3f4f6;
            vertical-align: middle;
        }

        .records_table tbody tr:hover {
            background-color: #f9fafb;
        }

        .records_table tbody tr:last-child td {
            border-bottom: none;
        }

    .content-row {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 24px;
        margin-bottom: 24px;
    }

    .summary-section {
        background: white;
        border-radius: 6px;
        border: 1px solid #e5e7eb;
        overflow: hidden;
    }

    .summary-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 13px;
    }

        .summary-table th,
        .summary-table td {
            padding: 10px 16px;
            text-align: left;
            border-bottom: 1px solid #f3f4f6;
        }

        .summary-table th {
            font-weight: 600;
            color: #4b5563;
            background: #f9fafb;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .summary-table .total-row {
            background: #eff6ff;
            font-weight: 700;
            color: #1e40af;
        }

        .summary-table .due-row {
            background: #fef2f2;
            font-weight: 700;
            color: #dc2626;
        }

    .footer-note {
        background: #f8fafc;
        padding: 16px 20px;
        border-radius: 6px;
        text-align: center;
        border: 1px solid #e5e7eb;
        margin-bottom: 24px;
    }

        .footer-note p {
            margin: 0;
            color: #6b7280;
            font-size: 13px;
            font-style: italic;
        }

    .item-desc p {
        margin: 0;
        color: #6b7280;
        font-size: 13px;
        font-style: italic;
    }

    .action-buttons {
        display: flex;
        gap: 12px;
        justify-content: center;
        padding: 20px 0;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 13px;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

    .btn-warning {
        background: #f59e0b;
        color: white;
    }

    .btn-secondary {
        background: #6b7280;
        color: white;
    }

    .text-danger {
        color: #dc2626 !important;
    }

    .font-weight-bold {
        font-weight: 700 !important;
    }

    .text-center {
        text-align: center;
    }

    .ml-3 {
        margin-left: 12px;
    }

    .text-gray {
        color: #6b7280;
    }

    @@media print {
        @@page {
            margin: 0;
        }

        body {
            background: white !important;
            margin: 0 !important;
            padding: 0 !important;
        }

        .invoice-container {
            box-shadow: none !important;
            margin: 0 auto !important;
            border-radius: 0 !important;
            width: 100% !important;
            max-width: 100% !important;
        }

        .header-section {
            background: white !important;
            color: #1f2937 !important;
            border-bottom: 1px solid #e5e7eb !important;
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }

        .info-card,
        .footer-note {
            background: #f8fafc !important;
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }

        .records_table thead th,
        .summary-table th {
            background: #f9fafb !important;
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }

        .summary-table .total-row {
            background: #eff6ff !important;
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }

        .summary-table .due-row {
            background: #fef2f2 !important;
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }
    }

    @@media (max-width: 768px) {
        .invoice-container {
            margin: 5px;
            border-radius: 6px;
        }

        .invoice-content {
            padding: 16px;
        }

        .header-section {
            padding: 20px 16px;
        }

        .header-content {
            flex-direction: column;
            gap: 16px;
            text-align: center;
            position: relative;
        }

        .header-text {
            position: static;
            transform: none;
            left: auto;
            top: auto;
            text-align: center;
        }

        .logo-container {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        .logo-container img {
            max-width: 100%;
            height: auto;
            max-height: 48px;
        }

        .info-grid {
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .content-row {
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .details-grid {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
            align-items: center;
        }

        .btn {
            width: 100%;
            max-width: 200px;
            justify-content: center;
        }
    }
</style>

<section class="content">
    <div class="invoice-container">
        <div class="header-section">
            <div class="header-content">
                <div class="logo-container">
                    <img src="@ViewBag.BusinessSetting.BusinessLogo" alt="Business Logo" />
                </div>
                <div class="header-text">
                    <h1>Delivery Challan</h1>
                    <p>@ViewBag.BusinessSetting.BusinessName</p>
                </div>
            </div>
        </div>

        <div class="invoice-content">
            <div class="info-grid">
                <div class="table-container">
                    <div class="table-header">
                        <h4><i class="fas fa-building"></i> From</h4>
                    </div>
                    <div class="details-grid">
                        <div class="detail-item">
                            <span class="detail-value">@ViewBag.BusinessSetting.BusinessName</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-value">@ViewBag.DeliveryChallan.Branch.Address</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-value">@ViewBag.DeliveryChallan.Branch.City, @ViewBag.DeliveryChallan.Branch.State, @ViewBag.DeliveryChallan.Branch.Country</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-value">@ViewBag.DeliveryChallan.Branch.Zipcode</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-value">
                                @ViewBag.DeliveryChallan.Branch.Mobile
                                @if (ViewBag.DeliveryChallan.Branch.AltMobileNo != null)
                                {
                                    <span>, @ViewBag.DeliveryChallan.Branch.AltMobileNo</span>
                                }
                            </span>
                        </div>
                        @if (ViewBag.DeliveryChallan.Branch.Email != null)
                        {
                            <div class="detail-item">
                                <span class="detail-value">@ViewBag.DeliveryChallan.Branch.Email</span>
                            </div>
                        }
                        @if (ViewBag.DeliveryChallan.Branch.Tax != null)
                        {
                            <div class="detail-item">
                                <span class="detail-value">@($"{ViewBag.DeliveryChallan.Branch.Tax}: {ViewBag.DeliveryChallan.Branch.TaxNo}")</span>
                            </div>
                        }
                    </div>
                </div>

                <div class="table-container">
                    <div class="table-header">
                        <h4><i class="fas fa-user"></i> Bill To</h4>
                    </div>
                    @if (ViewBag.DeliveryChallan.User.Addresses.Count > 0)
                    {
                        <div class="details-grid">
                            <div class="detail-item">
                                <span class="detail-value">@ViewBag.DeliveryChallan.User.Addresses[0].Name</span>
                            </div>
                            @if (ViewBag.DeliveryChallan.User.Addresses[0].Address != null && ViewBag.DeliveryChallan.User.Addresses[0].Address != "")
                            {
                                <div class="detail-item">
                                    <span class="detail-value">@ViewBag.DeliveryChallan.User.Addresses[0].Address</span>
                                </div>
                            }
                            @if (ViewBag.DeliveryChallan.User.Addresses[0].Address != null && ViewBag.DeliveryChallan.User.Addresses[0].Address != "")
                            {
                                <div class="detail-item">
                                    <span class="detail-value">
                                        @ViewBag.DeliveryChallan.User.Addresses[0].City, @ViewBag.DeliveryChallan.User.Addresses[0].State,
                                        @ViewBag.DeliveryChallan.User.Addresses[0].Country, @ViewBag.DeliveryChallan.User.Addresses[0].Zipcode
                                    </span>
                                </div>
                            }
                            @if (ViewBag.DeliveryChallan.User.Addresses[0].MobileNo != null && ViewBag.DeliveryChallan.User.Addresses[0].MobileNo != "")
                            {
                                <div class="detail-item">
                                    <span class="detail-value">@ViewBag.DeliveryChallan.User.Addresses[0].MobileNo</span>
                                </div>
                            }
                            @if (ViewBag.DeliveryChallan.User.Addresses[0].EmailId != null && ViewBag.DeliveryChallan.User.Addresses[0].EmailId != "")
                            {
                                <div class="detail-item">
                                    <span class="detail-value">@ViewBag.DeliveryChallan.User.Addresses[0].EmailId</span>
                                </div>
                            }
                            @if (ViewBag.DeliveryChallan.User.TaxNo != null)
                            {
                                <div class="detail-item">
                                    <span class="detail-value">@($"{ViewBag.DeliveryChallan.Branch.Tax}: {ViewBag.DeliveryChallan.User.TaxNo}")</span>
                                </div>
                            }
                        </div>
                    }
                </div>

                <div class="table-container">
                    <div class="table-header">
                        <h4><i class="fas fa-truck"></i> Ship To</h4>
                    </div>
                    @if (ViewBag.DeliveryChallan.User.Addresses.Count > 0)
                    {
                        if (ViewBag.DeliveryChallan.IsShippingAddressDifferent == false)
                        {
                            <div class="details-grid">
                                <div class="detail-item">
                                    <span class="detail-value">@ViewBag.DeliveryChallan.User.Addresses[0].Name</span>
                                </div>
                                @if (ViewBag.DeliveryChallan.User.Addresses[0].Address != null && ViewBag.DeliveryChallan.User.Addresses[0].Address != "")
                                {
                                    <div class="detail-item">
                                        <span class="detail-value">@ViewBag.DeliveryChallan.User.Addresses[0].Address</span>
                                    </div>
                                }
                                @if (ViewBag.DeliveryChallan.User.Addresses[0].Address != null && ViewBag.DeliveryChallan.User.Addresses[0].Address != "")
                                {
                                    <div class="detail-item">
                                        <span class="detail-value">
                                            @ViewBag.DeliveryChallan.User.Addresses[0].City, @ViewBag.DeliveryChallan.User.Addresses[0].State,
                                            @ViewBag.DeliveryChallan.User.Addresses[0].Country, @ViewBag.DeliveryChallan.User.Addresses[0].Zipcode
                                        </span>
                                    </div>
                                }
                                @if (ViewBag.DeliveryChallan.User.Addresses[0].MobileNo != null && ViewBag.DeliveryChallan.User.Addresses[0].MobileNo != "")
                                {
                                    <div class="detail-item">
                                        <span class="detail-value">@ViewBag.DeliveryChallan.User.Addresses[0].MobileNo</span>
                                    </div>
                                }
                                @if (ViewBag.DeliveryChallan.User.Addresses[0].EmailId != null && ViewBag.DeliveryChallan.User.Addresses[0].EmailId != "")
                                {
                                    <div class="detail-item">
                                        <span class="detail-value">@ViewBag.DeliveryChallan.User.Addresses[0].EmailId</span>
                                    </div>
                                }
                                @if (ViewBag.DeliveryChallan.User.TaxNo != null)
                                {
                                    <div class="detail-item">
                                        <span class="detail-value">@($"{ViewBag.DeliveryChallan.Branch.Tax}: {ViewBag.DeliveryChallan.User.TaxNo}")</span>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            if (ViewBag.DeliveryChallan.User.Addresses.Count > 1)
                            {
                                <div class="details-grid">
                                    <div class="detail-item">
                                        <span class="detail-value">@ViewBag.DeliveryChallan.User.Addresses[1].Name</span>
                                    </div>
                                    @if (ViewBag.DeliveryChallan.User.Addresses[1].Address != null && ViewBag.DeliveryChallan.User.Addresses[1].Address != "")
                                    {
                                        <div class="detail-item">
                                            <span class="detail-value">@ViewBag.DeliveryChallan.User.Addresses[1].Address</span>
                                        </div>
                                    }
                                    @if (ViewBag.DeliveryChallan.User.Addresses[1].Address != null && ViewBag.DeliveryChallan.User.Addresses[1].Address != "")
                                    {
                                        <div class="detail-item">
                                            <span class="detail-value">
                                                @ViewBag.DeliveryChallan.User.Addresses[1].City, @ViewBag.DeliveryChallan.User.Addresses[1].State,
                                                @ViewBag.DeliveryChallan.User.Addresses[1].Country, @ViewBag.DeliveryChallan.User.Addresses[1].Zipcode
                                            </span>
                                        </div>
                                    }
                                    @if (ViewBag.DeliveryChallan.User.Addresses[1].MobileNo != null && ViewBag.DeliveryChallan.User.Addresses[1].MobileNo != "")
                                    {
                                        <div class="detail-item">
                                            <span class="detail-value">@ViewBag.DeliveryChallan.User.Addresses[1].MobileNo</span>
                                        </div>
                                    }
                                    @if (ViewBag.DeliveryChallan.User.Addresses[1].EmailId != null && ViewBag.DeliveryChallan.User.Addresses[1].EmailId != "")
                                    {
                                        <div class="detail-item">
                                            <span class="detail-value">@ViewBag.DeliveryChallan.User.Addresses[1].EmailId</span>
                                        </div>
                                    }
                                    @if (ViewBag.DeliveryChallan.User.TaxNo != null)
                                    {
                                        <div class="detail-item">
                                            <span class="detail-value">@($"{ViewBag.DeliveryChallan.Branch.Tax}: {ViewBag.DeliveryChallan.User.TaxNo}")</span>
                                        </div>
                                    }
                                </div>
                            }
                        }
                    }
                </div>
            </div>

            <div class="table-container">
                <div class="table-header">
                    <h4><i class="fas fa-info-circle"></i> Challan Information</h4>
                </div>
                <div class="details-grid challan-info-grid">
                    <div class="detail-item">
                        <span class="detail-label">Challan Date</span>
                        <span class="detail-value">@ViewBag.DeliveryChallan.DeliveryChallanDate.ToString(ViewBag.BusinessSetting.DateFormat + " " + ViewBag.BusinessSetting.TimeFormat)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Challan #</span>
                        <span class="detail-value">@ViewBag.DeliveryChallan.InvoiceNo</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Type</span>
                        <span class="detail-value">@ViewBag.DeliveryChallan.DeliveryChallanType</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Status</span>
                        <span class="detail-value">@ViewBag.DeliveryChallan.Status</span>
                    </div>
                </div>
            </div>

            <div class="table-container">
                <div class="table-header">
                    <h4><i class="fas fa-list"></i> Challan Items</h4>
                </div>
                <table class="records_table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th></th>
                            <th>Item</th>
                            @if (ViewBag.BusinessSetting.CountryId == 2)
                            {
                                <th>HSN/SAC</th>
                            }
                            <th>Qty</th>
                            <th>Unit Price</th>
                            <th>Discount</th>
                            <th>Tax</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var count = 1;
                            foreach (var item in ViewBag.DeliveryChallan.DeliveryChallanDetails)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>
                                        @if (item.ProductImage != null && item.ProductImage != "")
                                        {
                                            <img src="@item.ProductImage" width="40" />
                                        }
                                    </td>
                                    <td>
                                        @item.ItemName <br />
                                        @foreach (var combo in item.ComboItems)
                                        {
                                            <span class="ml-3 text-gray">@combo.ItemName x @(String.Format("{0:0.##}", combo.Quantity))</span><br />
                                        }
                                        @if (item.OtherInfo != null && item.OtherInfo != "")
                                        {
                                            <br />
                                            <span>@Html.Raw(item.OtherInfo.Replace("\n", "</br>"))</span>
                                        }
                                    </td>
                                    @if (ViewBag.BusinessSetting.CountryId == 2)
                                    {
                                        <td>@(item.ItemCode ?? "-")</td>
                                    }
                                    <td>
                                        @if (item.Quantity > 0)
                                        {
                                            <span>@(String.Format("{0:0.##}", item.Quantity))</span>
                                        }

                                        @if (item.FreeQuantity != 0)
                                        {
                                            if (item.Quantity > 0)
                                            {
                                                <span>+ </span>
                                            }
                                            <span>@(String.Format("{0:0.##}", item.FreeQuantity))</span>
                                        }
                                        @item.Unit
                                    </td>
                                    <td>
                                        @{
                                            if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                            {
                                                @ViewBag.BusinessSetting.CurrencySymbol@(String.Format("{0:0.##}", item.UnitCost))
                                            }
                                            else
                                            {
                                                @(String.Format("{0:0.##}", item.UnitCost))@ViewBag.BusinessSetting.CurrencySymbol
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            if (item.DiscountType == "Percentage")
                                            {
                                                @(String.Format("{0:0.##}", item.Discount))<span>%</span>
                                            }
                                            else
                                            {
                                                if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                                {
                                                    @ViewBag.BusinessSetting.CurrencySymbol@(String.Format("{0:0.##}", item.Discount))
                                                }
                                                else
                                                {
                                                    @(String.Format("{0:0.##}", item.Discount))@ViewBag.BusinessSetting.CurrencySymbol
                                                }
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                            {
                                                @ViewBag.BusinessSetting.CurrencySymbol@(String.Format("{0:0.##}", (item.PriceIncTax - item.PriceExcTax)))
                                            }
                                            else
                                            {
                                                @(String.Format("{0:0.##}", (item.PriceIncTax - item.PriceExcTax)))@ViewBag.BusinessSetting.CurrencySymbol
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            if (ViewBag.BusinessSetting.CurrencySymbolPlacement == 1)
                                            {
                                                @ViewBag.BusinessSetting.CurrencySymbol@(String.Format("{0:0.##}", item.AmountIncTax))
                                            }
                                            else
                                            {
                                                @(String.Format("{0:0.##}", item.AmountIncTax))@ViewBag.BusinessSetting.CurrencySymbol
                                            }
                                        }
                                    </td>
                                </tr>
