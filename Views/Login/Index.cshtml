
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="@ViewBag.BusinessSetting.Favicon" type="image/x-icon">
    <title>@(ViewBag.PageTitle ?? ViewBag.BusinessSetting.BusinessName + " | Log In")</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="@(ViewBag.MetaDescription ?? "Secure login to EquiBillBook GST billing software. Access your business dashboard and manage your accounting.")">
    <meta name="keywords" content="@(ViewBag.MetaKeywords ?? "EquiBillBook login, GST billing software login, secure login")">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="@(ViewBag.OgTitle ?? "Login to EquiBillBook - GST Billing Software")">
    <meta property="og:description" content="@(ViewBag.OgDescription ?? "Secure access to your EquiBillBook GST billing software dashboard.")">
    <meta property="og:type" content="website">
    <meta property="og:url" content="@(ViewBag.CanonicalUrl ?? "https://equibillbook.com/login")">
    <meta property="og:image" content="@(ViewBag.OgImage ?? "https://equibillbook.com/Content/web-assets/images/innerbanner.png")">
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="@(ViewBag.TwitterTitle ?? "EquiBillBook Login - GST Software Access")">
    <meta name="twitter:description" content="@(ViewBag.TwitterDescription ?? "Secure login to EquiBillBook GST billing software.")">
    <meta name="twitter:image" content="@(ViewBag.TwitterImage ?? "https://equibillbook.com/Content/web-assets/images/innerbanner.png")">
    
    <!-- Canonical URL -->
    <link rel="canonical" href="@(ViewBag.CanonicalUrl ?? "https://equibillbook.com/login")">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Content/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/assets/css/adminlte.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="~/Content/plugins/toastr/toastr.min.css">
    <link href="~/Content/assets/css/admin.css" rel="stylesheet" />
    <style>
        body {
            background-color: #025670;
        }
    </style>
    <style>
        .goog-logo-link {
            display: none !important;
        }

        .goog-te-gadget {
            color: transparent !important;
            font-size: 0 !important;
        }

            .goog-te-gadget .goog-te-combo {
                /*padding: 0.375rem 0.75rem;*/
                padding: 0.575rem 0.75rem;
                /*color: #495057;*/
                border: 1px solid #ced4da;
                border-radius: 0.25rem;
            }

            .goog-te-gadget .goog-te-combo {
                margin: 0 !important;
            }

        body > .skiptranslate {
            display: none;
        }

        .skiptranslate span {
            display: none;
        }

        body {
            top: 0 !important
        }

        #goog-gt-tt, .goog-te-balloon-frame {
            display: none !important;
        }

        .goog-text-highlight {
            background: none !important;
            box-shadow: none !important;
        }

        .VIpgJd-ZVi9od-aZ2wEe-wOHMyf-ti6hGc {
            display: none;
        }

        #goog-gt- {
            display: none !important;
        }
    </style>

    @*<link rel="manifest" href="~/Content/PWA/manifest.json" />*@
    @{
        var hostname = Request.Url.Host;
        <link rel="manifest" href="~/ExternalContents/Manifest/@(hostname).json" />
    }
    <!-- ios support -->
    <link rel="apple-touch-icon" href="images/icons/icon-72x72.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-96x96.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-128x128.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-144x144.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-152x152.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-192x192.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-284x284.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-512x512.png" />
    <meta name="apple-mobile-web-app-status-bar" content="#db4938" />
    <meta name="theme-color" content="#db4938" />
    <script src="~/Content/PWA/app.js"></script>

</head>
<body class="hold-transition login-page" style="background-color: @(ViewBag.Domain == "pos.neelkanthbakery.com"?"#025670":"#e9ecef")">
    <div class="login-box">
        @if (ViewBag.WhitelabelType == 1)
        {
        <div class="login-logo">
            <a href="@ViewBag.BusinessSetting.ParentWebsiteUrl"><img src="@ViewBag.BusinessSetting.BusinessLogo" style=" width: 222px; display: block; margin-left: auto; margin-right: auto;" /></a>            
        </div>
        }
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-body login-card-body">
                @if (ViewBag.Domain == "pos.neelkanthbakery.com")
                {
                    <img src="https://neelkanthbakery.com/images/neelkanthLogo.png" style=" width: 200px; display: block; margin-left: auto; margin-right: auto;" />
                    <br />
                }

                <div id="google_translate_element" style="text-align:right"></div><br />
                <p class="login-box-msg">Sign in to start your session</p>
                <div>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="User Email Id *" id="txtEmailId">
                        <div class="input-group-append ml-0">
                            <div class="input-group-text" style="border-left: 1px solid #ced4da;">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Password *" id="txtPassword">
                        <div class="input-group-append ml-0">
                            <div class="input-group-text" style="border-left: 1px solid #ced4da;">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <p class="mt-2">
                                <a href="/forgotpassword" class="">I forgot my password</a>
                            </p>
                            <div class="icheck-primary hidden">
                                <input type="checkbox" id="chkIsRememberMe" checked>
                                <label for="chkIsRememberMe">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <a href="javascript:void(0)" class="btn btn-primary btn-block" onclick="login()">Sign In</a>
                        </div>
                        <!-- /.col -->
                    </div>
                    @*<p class="mb-0">
                        <a href="/forgotpassword" class="">I forgot my password</a>
                    </p>*@
                    @if (ViewBag.WhitelabelType == 1)
                    {
                        <p class="mb-0">
                            Don't have an account? <a href="/register" class="text-center">Register a new account</a>
                        </p>
                    }
                </div>

                <!-- /.social-auth-links -->
                @*<p class="mb-1">
            <a href="forgot-password.html">I forgot my password</a>
        </p>*@

            </div>
            <!-- /.login-card-body -->
        </div>
    </div>

    <!-- /.login-box -->

    <div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px; top: 0px; width: 100%; height: 100%; z-index: 30001; opacity: 0.8;display:none">
        <div class="overlay-wrapper">
            <div class="overlay"><i class="fas fa-3x fa-sync-alt fa-spin"></i><div class="text-bold pt-2">Loading...</div></div>
        </div>
    </div>

    <audio id="success"><source src="~/Content/Audio/success.mp3"></audio>
    <audio id="error"><source src="~/Content/Audio/error.mp3"></audio>

    <!-- jQuery -->
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="~/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <!-- Toastr -->
    <script src="~/Content/plugins/toastr/toastr.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/assets/js/adminlte.min.js"></script>
    <script src="~/Content/JQuery/Customer/Authentication/Login.js"></script>

    @*<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>

    <script type="text/javascript">
        var googtrans = Cookies.get('googtrans');
        if (!googtrans) {
            Cookies.set('googtrans', '/auto/en');
        }
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({ pageLanguage: '' }, 'google_translate_element');
        }
    </script>
</body>
</html>