@model EquiBillBook.Models.ClsInvoiceTemplateColorMaster
@using System.Web.Mvc

@{
    ViewBag.Title = "Edit Color Default";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as SelectList ?? new SelectList(new List<object>(), "Value", "Text");
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Color Default</h1>
                <div class="float-left">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admindashboard/index">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admintemplatemaster/index">Template Masters</a></li>
                        <li class="breadcrumb-item active">Edit Color</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        @using (Html.BeginForm("EditColor", "AdminTemplateMaster", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.InvoiceTemplateColorMasterId)
            @Html.HiddenFor(m => m.InvoiceTemplateMasterId)

            <div class="card card-primary card-outline">
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ColorKey) <span class="text-danger">*</span>
                        @Html.TextBoxFor(m => m.ColorKey, new { @class = "form-control divColorKey_ctrl", id = "txtColorKey" })
                        <small class="text-red font-weight-bold errorText" id="divColorKey"></small>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ColorName) <span class="text-danger">*</span>
                        @Html.TextBoxFor(m => m.ColorName, new { @class = "form-control divColorName_ctrl", id = "txtColorName" })
                        <small class="text-red font-weight-bold errorText" id="divColorName"></small>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.DefaultValue) <span class="text-danger">*</span>
                        @Html.TextBoxFor(m => m.DefaultValue, new { @class = "form-control divDefaultValue_ctrl", type = "color", id = "txtDefaultValue", style = "height: 38px; cursor: pointer;" })
                        <small class="text-red font-weight-bold errorText" id="divDefaultValue"></small>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.InvoiceTemplateColorCategoryMasterId, "Category") <span class="text-danger">*</span>
                        @Html.DropDownListFor(m => m.InvoiceTemplateColorCategoryMasterId, categories, "-- Select Category --", new { @class = "form-control divCategory_ctrl", id = "ddlCategory" })
                        <small class="text-red font-weight-bold errorText" id="divCategory"></small>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.SortOrder)
                        @Html.TextBoxFor(m => m.SortOrder, new { @class = "form-control", id = "txtSortOrder" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Description)
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3, id = "txtDescription" })
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
                            Active
                        </label>
                    </div>
                </div>
                <div class="card-footer">
                    <button id="btnUpdate" type="submit" class="btn btn-primary float-right" onclick="update(1)"><i class="fas fa-edit"></i> Update</button>
                    <button id="btnUpdate_AddAnother" type="submit" class="btn btn-success float-right mr-2" onclick="update(2)"><i class="fas fa-plus-circle"></i> Update & Add Another</button>
                    @*<a id="btnBack" href="/admintemplatemaster/colors" class="btn btn-warning float-sm-right mr-2"><i class="fas fa-arrow-left"></i> Back</a>*@
                </div>
            </div>
        }
    </div>
</section>

<script src="~/Content/JQuery/Admin/AdminTemplateMaster.js"></script>
