@model EquiBillBook.Models.ClsInvoiceTemplateColorMaster
@using System.Collections.Generic
@using System.Web.Mvc

@{
    ViewBag.Title = "Create Color Default";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as SelectList ?? new SelectList(new List<object>(), "Value", "Text");
    var existingColors = ViewBag.ExistingColors as IEnumerable<EquiBillBook.Models.ClsInvoiceTemplateColorMaster> ?? new List<EquiBillBook.Models.ClsInvoiceTemplateColorMaster>();
    var existingColorsCategories = ViewBag.ExistingColorsCategories as Dictionary<long, EquiBillBook.Models.ClsInvoiceTemplateColorCategoryMaster> ?? new Dictionary<long, EquiBillBook.Models.ClsInvoiceTemplateColorCategoryMaster>();
    var invoiceTemplateMasterId = ViewBag.InvoiceTemplateMasterId as long? ?? 0;
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create Color Default</h1>
                <div class="float-left">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admindashboard/index">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admintemplatemaster/index">Template Masters</a></li>
                        <li class="breadcrumb-item active">Create Color</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        @using (Html.BeginForm("CreateColor", "AdminTemplateMaster", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.InvoiceTemplateMasterId)

            <div class="card card-primary card-outline">
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ColorKey) <span class="text-danger">*</span>
                        @Html.TextBoxFor(m => m.ColorKey, new { @class = "form-control divColorKey_ctrl", id = "txtColorKey" })
                        <small class="text-red font-weight-bold errorText" id="divColorKey"></small>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ColorName) <span class="text-danger">*</span>
                        @Html.TextBoxFor(m => m.ColorName, new { @class = "form-control divColorName_ctrl", id = "txtColorName" })
                        <small class="text-red font-weight-bold errorText" id="divColorName"></small>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.DefaultValue) <span class="text-danger">*</span>
                        @Html.TextBoxFor(m => m.DefaultValue, new { @class = "form-control divDefaultValue_ctrl", type = "color", id = "txtDefaultValue", style = "height: 38px; cursor: pointer;" })
                        <small class="text-red font-weight-bold errorText" id="divDefaultValue"></small>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.InvoiceTemplateColorCategoryMasterId, "Category") <span class="text-danger">*</span>
                        @Html.DropDownListFor(m => m.InvoiceTemplateColorCategoryMasterId, categories, "-- Select Category --", new { @class = "form-control divCategory_ctrl", id = "ddlCategory" })
                        <small class="text-red font-weight-bold errorText" id="divCategory"></small>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.SortOrder)
                        @Html.TextBoxFor(m => m.SortOrder, new { @class = "form-control", id = "txtSortOrder" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Description)
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3, id = "txtDescription" })
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input", @checked = "checked" })
                            Active
                        </label>
                    </div>
                </div>
                <div class="card-footer">
                    <button id="btnSave" type="submit" class="btn btn-primary float-right" onclick="insert(1)"><i class="fas fa-save"></i> Save</button>
                    <button id="btnSave_AddAnother" type="submit" class="btn btn-success float-right mr-2" onclick="insert(2)"><i class="fas fa-plus-circle"></i> Save & Add Another</button>
                    @*<a id="btnBack" href="/admintemplatemaster/colors" class="btn btn-warning float-sm-right mr-2"><i class="fas fa-arrow-left"></i> Back</a>*@
                </div>
            </div>
        }

        @* Existing Colors by Category - Reference List *@
        @if (existingColors != null && existingColors.Any())
        {
            <div class="card card-info card-outline mt-4">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-palette"></i> Existing Colors (Grouped by Category)</h3>
                </div>
                <div class="card-body">
                    @{
                        var colorsByCategory = existingColors
                            .GroupBy(c => 
                            {
                                if (c.InvoiceTemplateColorCategoryMasterId.HasValue && existingColorsCategories.ContainsKey(c.InvoiceTemplateColorCategoryMasterId.Value))
                                {
                                    return existingColorsCategories[c.InvoiceTemplateColorCategoryMasterId.Value].CategoryName;
                                }
                                return !string.IsNullOrEmpty(c.Category) ? c.Category : "Uncategorized";
                            })
                            .OrderBy(g => g.Key);
                    }
                    
                    @foreach (var categoryGroup in colorsByCategory)
                    {
                        <div class="mb-4">
                            <h5 class="font-weight-bold mb-2">
                                <i class="fas fa-folder"></i> @categoryGroup.Key
                            </h5>
                            <div class="row">
                                @foreach (var color in categoryGroup.OrderBy(c => c.SortOrder).ThenBy(c => c.ColorKey))
                                {
                                    <div class="col-md-3 col-sm-4 col-6 mb-3">
                                        <div class="card border">
                                            <div class="card-body p-2">
                                                <div class="d-flex align-items-center">
                                                    <span style="display:inline-block;width:30px;height:30px;border:1px solid #ccc;background-color:@color.DefaultValue;border-radius:4px;margin-right:8px;"></span>
                                                    <div style="flex:1;min-width:0;">
                                                        <div class="font-weight-bold text-truncate" title="@color.ColorName">@color.ColorName</div>
                                                        <div class="small text-muted text-truncate" title="@color.ColorKey">@color.ColorKey</div>
                                                        <div class="small">@color.DefaultValue</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</section>

<script src="~/Content/JQuery/Admin/AdminTemplateMaster.js"></script>
