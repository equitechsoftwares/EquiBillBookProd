                                                    <div class="col-sm-6">
                                                        <h5>
                                                            <span id="divTotalCount">
                                                                Instructions
                                                            </span>
                                                        </h5>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- /.card-header -->
                                            <div class="card-body">
                                                <div id="tblUserRole_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                                    <div class="dataTables_length noPrint" id="tblUserRole_length">
                                                        <label>
                                                            <b>Follow the instructions carefully before importing the file.</b><br />
                                                            The columns of the file should be in the following order.

                                                        </label>
                                                    </div>

                                                    <div class="row mt-1">
                                                        <div class="col-sm-12 table-responsive">
                                                            <table id="" class="table table-bordered table-striped">
                                                                <thead id="thead">
                                                                    <tr>
                                                                        <th>Column No</th>
                                                                        <th>Column Name</th>
                                                                        <th>Instruction</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody class="table-body">
                                                                    @{
                                                                        int columnNumber = 1;
                                                                    }

                                                                    <tr>
                                                                        <td>@columnNumber</td>
                                                                        <td>SKU (Required)</td>
                                                                        <td>Variation SKU is required if product type is variable</td>
                                                                    </tr>
                                                                    @{
                                                                        columnNumber++;
                                                                    }

                                                                    @if (ViewBag.ShowBranchColumn)
                                                                    {
                                                                        <tr>
                                                                            <td>@columnNumber</td>
                                                                            <td>
                                                                                BranchName (Optional)<br />
                                                                                If blank first business location will be used
                                                                            </td>
                                                                            <td>
                                                                                Name of the business location <br />
                                                                                Available Options: <i tabindex="0" class="fa fa-info-circle text-info hover-q no-print @(Request.Cookies["SystemSetting"].Value.Split('&')[0].Split('=')[1] == "True" ? "":"hidden")" role="button" data-toggle="popover" data-trigger="focus" title="" data-content="Click on any option to copy"></i><br />
                                                                                @{
                                                                                    foreach (var tag in ViewBag.Branchs)
                                                                                    {
                                                                                        <a href="javascript:void(0)" onclick="copyTag('@tag.Branch')">@tag.Branch | </a>
                                                                                    }
                                                                                }
                                                                            </td>
                                                                        </tr>
                                                                        columnNumber++;
                                                                    }

                                                                    @if (ViewBag.ItemSetting.EnableSecondaryUnit == true)
                                                                    {
                                                                        <tr>
                                                                            <td>@columnNumber</td>
                                                                            <td>
                                                                                UnitType (Optional) <br />
                                                                                If blank primary unit will be used
                                                                            </td>
                                                                            <td>
                                                                                Available Options: <i tabindex="0" class="fa fa-info-circle text-info hover-q no-print @(Request.Cookies["SystemSetting"].Value.Split('&')[0].Split('=')[1] == "True" ? "":"hidden")" role="button" data-toggle="popover" data-trigger="focus" title="" data-content="Click on any option to copy"></i><br />
                                                                                <a href="javascript:void(0)" onclick="copyTag('Primary Unit')">Primary Unit | </a>
                                                                                <a href="javascript:void(0)" onclick="copyTag('Secondary Unit')">Secondary Unit |</a>
                                                                                <a href="javascript:void(0)" onclick="copyTag('Tertiary Unit')">Tertiary Unit |</a>
                                                                                <a href="javascript:void(0)" onclick="copyTag('Quaternary Unit')">Quaternary Unit</a>
                                                                            </td>
                                                                        </tr>
                                                                        columnNumber++;
                                                                    }
                                                                    <tr>
                                                                        <td>@columnNumber</td>
                                                                        <td>Quantity (Required)</td>
                                                                        <td>
                                                                        </td>
                                                                    </tr>
                                                                    @{
                                                                        columnNumber++;
                                                                    }
                                                                    <tr>
                                                                        <td>@columnNumber</td>
                                                                        <td>UnitCost (Before Tax) (Required)</td>
                                                                        <td>
                                                                        </td>
                                                                    </tr>
                                                                    @{
                                                                        columnNumber++;
                                                                    }
                                                                    @if (ViewBag.ItemSetting.EnableLotNo == true)
                                                                    {
                                                                        <tr>
                                                                            <td>@columnNumber</td>
                                                                            <td>LotNo (Optional)</td>
                                                                            <td>
                                                                            </td>
                                                                        </tr>
                                                                        columnNumber++;
                                                                    }
                                                                    @if (ViewBag.ItemSetting.EnableLotNo == true
                                                                        && ViewBag.ItemSetting.ExpiryType == 2)
                                                                    {
                                                                        <tr>
                                                                            <td>@columnNumber</td>
                                                                            <td>ManufacturingDate (Optional)</td>
                                                                            <td>
                                                                                Date in format yyyy-mm-dd . Example: 2020-04-21
                                                                            </td>
                                                                        </tr>
                                                                        columnNumber++;
                                                                    }
                                                                    @if (ViewBag.ItemSetting.EnableLotNo == true)
                                                                    {
                                                                        <tr>
                                                                            <td>@columnNumber</td>
                                                                            <td>ExpiryDate (Optional)</td>
                                                                            <td>
                                                                                Date in format yyyy-mm-dd . Example: 2020-04-21
                                                                            </td>
                                                                        </tr>
                                                                        columnNumber++;
                                                                    }

                                                                    <tr>
                                                                        <td>@columnNumber</td>
                                                                        <td>
                                                                            Date (Optional) <br />
                                                                            If blank today's date will be used
                                                                        </td>
                                                                        <td>
                                                                            Stock Entry Date<br />
                                                                            Date in format yyyy-mm-dd . Example: 2020-04-21
                                                                        </td>
                                                                    </tr>
                                                                    @{
                                                                        columnNumber++;
                                                                    }
                                                                    <tr>
                                                                        <td>@columnNumber</td>
                                                                        <td>Notes (Optional)</td>
                                                                        <td>
                                                                        </td>
                                                                    </tr>
                                                                    @{
                                                                        columnNumber++;
                                                                    }
                                                                    <tr>
                                                                        <td>@columnNumber</td>
                                                                        <td>
                                                                            SalesExcTax (Optional) <br />
                                                                            If blank default value will be used
                                                                        </td>
                                                                        <td>
                                                                            Unit Selling Price (Exc. Tax)
                                                                        </td>
                                                                    </tr>
                                                                    @{
                                                                        columnNumber++;
                                                                    }
                                                                    @if (ViewBag.ItemSetting.EnableMrp == true)
                                                                    {
                                                                        <tr>
                                                                            <td>@columnNumber</td>
                                                                            <td>
                                                                                Mrp (Optional) <br />
                                                                                If blank default value will be used
                                                                            </td>
                                                                            <td>
                                                                                Maximum Retail Price
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- /.card-body -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="import-other-software" role="tabpanel" aria-labelledby="import-other-software-tab">
                                <div class="row">
                                    <div class="col-12 noPrint">
                                        <div class="card  card-primary card-outline ">
                                            <div class="card-body">
                                                <div class="row">

                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <label>Choose File To Import </label>
                                                            <div class="input-group">
                                                                <input type="file" id="otherSoftwareExcelfile" accept=".xlsx, .xls, .csv" style="padding:0px" onchange="getExcelBase64()">
                                                            </div>
                                                            <small class="text-red font-weight-bold errorText" id="divOtherSoftwareExcel"></small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary float-right mt-2" onclick="InsertOtherSoftwareImport_OpeningStock(1)">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 noPrint">
                                        <div class="card  card-primary card-outline ">
                                            <div class="card-body">
                                                <table id="tblOtherSoftwareImport" class="table table-bordered table-striped">
                                                    @Html.Partial("PartialOtherSoftwareImport_OpeningStock")
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>



        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
