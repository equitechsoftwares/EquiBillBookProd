        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-12">
                <div class="card card-primary card-outline card-outline-tabs">
                    <div class="card-header p-0 border-bottom-0">
                        <ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="import-excel-tab" data-toggle="pill" href="#import-excel" role="tab" aria-controls="import-excel" aria-selected="true">Import From Excel</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="import-other-software-tab" data-toggle="pill" href="#import-other-software" role="tab" aria-controls="import-other-software" aria-selected="false">Import From Any Other Software</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content" id="custom-tabs-four-tabContent">
                            <div class="tab-pane fade show active" id="import-excel" role="tabpanel" aria-labelledby="import-excel-tab">
                                <div class="alert alert-warning alert-dismissible" id="divErrorMsg" style="display:none">
                                    <button type="button" class="close" onclick="closeErrorMsg()">×</button>
                                    <h5><i class="icon fas fa-exclamation-triangle"></i> Data not imported!</h5>
                                    One or more errors found. Please fix the errors stated below in the excel file and then upload it again
                                    <hr />
                                    <div class="form-group">
                                        <label style="width:100%">Errors which needs to be fixed</label>
                                        <p id="txtErrorMsg" class="mb-0">  </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 noPrint">
                                        <div class="card  card-primary card-outline ">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <label>Choose File To Import </label>
                                                            <div class="input-group">
                                                                <input type="file" id="excelfile" accept=".xlsx, .xls, .csv" style="padding:0px" onchange="uploadExcel()">
                                                            </div>
                                                            <small class="text-red font-weight-bold errorText" id="divExcel"></small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary float-right mt-2" onclick="BulkInsert_OpeningStock(1)">Submit</button>
                                                <button type="submit" class="btn btn-success float-right mt-2 mr-2" onclick="BulkInsert_OpeningStock(2)">Submit & Add Another</button>
                                                <div class="btn-group float-sm-right mt-2 mr-2">
                                                    <button type="button" class="btn btn-primary">Download Sample</button>
                                                    <button type="button" class="btn btn-primary dropdown-toggle dropdown-icon" data-toggle="dropdown">
                                                        <span class="sr-only">Toggle Dropdown</span>
                                                    </button>
                                                    <div class="dropdown-menu" role="menu">
                                                        <a class="dropdown-item" href="@Url.Action("DownloadOpeningStockSampleXlsx", "Items")"> XLSX</a>
                                                        <a class="dropdown-item" href="@Url.Action("DownloadOpeningStockSample", "Items")">CSV</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
