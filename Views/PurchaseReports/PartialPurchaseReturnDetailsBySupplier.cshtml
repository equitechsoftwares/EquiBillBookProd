                        @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", ViewBag.TotalAmountRemaining))
                    }
                    else
                    {
                        @(String.Format("{0:0.##}", ViewBag.TotalAmountRemaining))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                    }
                }
            </td>
        </tr>
    </tbody>
