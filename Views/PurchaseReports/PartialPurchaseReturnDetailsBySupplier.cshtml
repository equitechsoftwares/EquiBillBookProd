



@{
    var count = 1;
    <thead id="thead">
        <tr>
            <th>Sln</th>
            <th>Date</th>
            <th>Debit Note Invoice No</th>
            <th>Status</th>
            <th>Total Debit Note (Exc. Tax)</th>
            <th>Total Tax</th>
            <th>Total Debit Note (Inc. Tax)</th>
            @*<th>Refunded </th>*@
            <th>Balance</th>
        </tr>
    </thead>
    <tbody class="table-body">
        @foreach (var item in ViewBag.PurchaseReturns)
        {

            <tr>
                <td>@(ViewBag.PageSize * (ViewBag.PageIndex - 1) + count)</td>
                <td>@item.Date.ToString(Request.Cookies["BusinessSetting"].Value.Split('&')[0].Split('=')[1] + " " + Request.Cookies["BusinessSetting"].Value.Split('&')[1].Split('=')[1])</td>
                <td>
                    @if (ViewBag.PurchaseReturnPermission.IsView)
                    {
                        <a href="javascript:void(0)" onclick="ViewPurchaseReturn(@item.PurchaseReturnId)">@item.InvoiceNo</a>
                    }
                    else
                    {
                        @item.InvoiceNo
                    }
                </td>
                <td>@item.Status</td>
                <td>
                    @{
                        if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                        {
                            @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", item.GrandTotal - item.TotalTaxAmount))
                        }
                        else
                        {
                            @(String.Format("{0:0.##}", item.GrandTotal - item.TotalTaxAmount))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                        }
                    }
                </td>
                <td>
                    @{
                        if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                        {
                            @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", item.TotalTaxAmount))
                        }
                        else
                        {
                            @(String.Format("{0:0.##}", item.TotalTaxAmount))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                        }
                    }
                </td>
                <td>
                    @{
                        if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                        {
                            @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", item.GrandTotal))
                        }
                        else
                        {
                            @(String.Format("{0:0.##}", item.GrandTotal))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                        }
                    }
                </td>
                @*<td>
                    @{
                        if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                        {
                            @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", item.Paid))
                        }
                        else
                        {
                            @(String.Format("{0:0.##}", item.Paid))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                        }
                    }
                </td>*@

                <td>
                    @{
                        if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                        {
                            @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", item.AmountRemaining))
                        }
                        else
                        {
                            @(String.Format("{0:0.##}", item.AmountRemaining))@Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]
                        }
                    }
                </td>
            </tr>
            count++;

        }
    </tbody>

    <tbody>
        <tr>
            <td colspan="4" data-title="Total" class="text-right"><b>Total</b></td>
            @*<td data-title="Total Amount">
                @ViewBag.TotalSalesInvoices
            </td>*@
            <td data-title="Total Amount">
                @{
                    if (Request.Cookies["BusinessSetting"].Value.Split('&')[2].Split('=')[1] == "1")
                    {
                        @Request.Cookies["data"].Value.Split('&')[5].Split('=')[1]@(String.Format("{0:0.##}", ViewBag.TotalSalesExcTax))
