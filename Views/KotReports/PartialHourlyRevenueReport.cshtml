@{
    var hourlyRevenue = ViewBag.HourlyRevenue as System.Collections.Generic.List<dynamic> ?? new System.Collections.Generic.List<dynamic>();
}
<thead id="thead">
    <tr>
        <th>Hour</th>
        <th>Total KOTs</th>
        <th>Total Orders</th>
        <th>Total Revenue</th>
        <th>Average Order Value</th>
    </tr>
</thead>
<tbody class="table-body">
    @if (hourlyRevenue != null && hourlyRevenue.Count > 0)
    {
        foreach (var hour in hourlyRevenue)
        {
            <tr>
                <td>@(hour.HourLabel ?? "-")</td>
                <td>@(hour.TotalKots ?? 0)</td>
                <td>@(hour.TotalOrders ?? 0)</td>
                <td>@(hour.TotalRevenue != null ? ((decimal)hour.TotalRevenue).ToString("N2") : "0.00")</td>
                <td>@(hour.AverageOrderValue != null ? ((decimal)hour.AverageOrderValue).ToString("N2") : "0.00")</td>
            </tr>
        }
    }
</tbody>

