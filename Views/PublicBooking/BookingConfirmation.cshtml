@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.PageTitle</title>
    <meta name="description" content="@ViewBag.MetaDescription">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 40px 20px;
        }
        .confirmation-container {
            max-width: 700px;
            margin: 0 auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            overflow: hidden;
        }
        .confirmation-header {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 40px;
            text-align: center;
        }
        .confirmation-icon {
            font-size: 4rem;
            margin-bottom: 20px;
        }
        .confirmation-header h1 {
            margin: 0;
            font-size: 2rem;
            font-weight: 600;
        }
        .confirmation-body {
            padding: 40px;
        }
        .booking-details {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 25px;
            margin: 20px 0;
        }
        .detail-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #e0e0e0;
        }
        .detail-row:last-child {
            border-bottom: none;
        }
        .detail-label {
            font-weight: 600;
            color: #666;
        }
        .detail-value {
            color: #333;
            text-align: right;
        }
        .btn-cancel {
            background: #dc3545;
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            display: inline-block;
            margin-top: 20px;
        }
        .btn-cancel:hover {
            background: #c82333;
            color: white;
        }
        .status-badge {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
        }
        .status-pending {
            background: #ffc107;
            color: #856404;
        }
        .status-confirmed {
            background: #28a745;
            color: white;
        }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <div class="confirmation-header">
            <div class="confirmation-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1>Booking Confirmed!</h1>
            <p class="mb-0">Thank you for your reservation</p>
        </div>
        
        <div class="confirmation-body">
            <div class="booking-details">
                <h5 class="mb-4"><i class="fas fa-info-circle"></i> Booking Details</h5>
                
                <div class="detail-row">
                    <span class="detail-label">Booking Number:</span>
                    <span class="detail-value"><strong>@ViewBag.Booking.BookingNo</strong></span>
                </div>
                
                <div class="detail-row">
                    <span class="detail-label">Status:</span>
                    <span class="detail-value">
                        @if (ViewBag.Booking.Status == "Confirmed")
                        {
                            <span class="status-badge status-confirmed">Confirmed</span>
                        }
                        else
                        {
                            <span class="status-badge status-pending">Pending Confirmation</span>
                        }
                    </span>
                </div>
                
                <div class="detail-row">
                    <span class="detail-label">Customer Name:</span>
                    <span class="detail-value">@ViewBag.Booking.CustomerName</span>
                </div>
                
                <div class="detail-row">
                    <span class="detail-label">Date:</span>
                    <span class="detail-value">@(((DateTime)ViewBag.Booking.BookingDate).ToString("dddd, MMMM dd, yyyy"))</span>
                </div>
                
                <div class="detail-row">
                    <span class="detail-label">Time:</span>
                    <span class="detail-value">@(((TimeSpan)ViewBag.Booking.BookingTime).ToString(@"hh\:mm"))</span>
                </div>
                
                <div class="detail-row">
                    <span class="detail-label">Duration:</span>
                    <span class="detail-value">@ViewBag.Booking.Duration minutes</span>
                </div>
                
                <div class="detail-row">
                    <span class="detail-label">Number of Guests:</span>
                    <span class="detail-value">@ViewBag.Booking.NoOfGuests</span>
                </div>
                
                <div class="detail-row">
                    @{
                        var tableList = ViewBag.Booking.TableNos;
                        int tableCount = 0;
                        if (tableList != null)
                        {
                            try 
                            { 
                                tableCount = ((System.Collections.ICollection)tableList).Count; 
                            } 
                            catch { }
                        }
                    }
                    <span class="detail-label">Table@(tableCount > 1 ? "s" : ""):</span>
                    <span class="detail-value">
                        @{
                            var tables = ViewBag.Booking.TableNos;
                            if (tables != null && tableCount > 0)
                            {
                                var tableStrings = new System.Collections.Generic.List<string>();
                                try
                                {
                                    foreach (var table in (System.Collections.IEnumerable)tables)
                                    {
                                        if (table != null)
                                        {
                                            tableStrings.Add(table.ToString());
                                        }
                                    }
                                    if (tableStrings.Count > 0)
                                    {
                                        <text>@string.Join(", ", tableStrings)</text>
                                    }
                                }
                                catch
                                {
                                    if (ViewBag.Booking.TableNo != null)
                                    {
                                        <text>@ViewBag.Booking.TableNo @(ViewBag.Booking.TableName != null ? "- " + ViewBag.Booking.TableName : "")</text>
                                    }
                                    else
                                    {
                                        <text>Not Assigned</text>
                                    }
                                }
                            }
                            else if (ViewBag.Booking.TableNo != null)
                            {
                                <text>@ViewBag.Booking.TableNo @(ViewBag.Booking.TableName != null ? "- " + ViewBag.Booking.TableName : "")</text>
                            }
                            else
                            {
                                <text>Not Assigned</text>
                            }
                        }
                    </span>
                </div>
                
                @if (!string.IsNullOrEmpty(ViewBag.Booking.SpecialRequest))
                {
                    <div class="detail-row">
                        <span class="detail-label">Special Requests (Optional):</span>
                        <span class="detail-value">@ViewBag.Booking.SpecialRequest</span>
                    </div>
                }
                
                @if (ViewBag.Booking.DepositAmount != null && Convert.ToDecimal(ViewBag.Booking.DepositAmount) > 0)
                {
                    <div class="detail-row">
                        <span class="detail-label">Deposit Amount:</span>
                        <span class="detail-value">
                            <strong>@Convert.ToDecimal(ViewBag.Booking.DepositAmount).ToString("C")</strong>
                            @{
                                bool depositPaid = false;
                                try
                                {
                                    var booking = ViewBag.Booking;
                                    if (booking is System.Collections.IDictionary dict)
                                    {
                                        if (dict.Contains("DepositPaid") && dict["DepositPaid"] != null)
                                        {
                                            depositPaid = Convert.ToBoolean(dict["DepositPaid"]);
                                        }
                                    }
                                    else
                                    {
                                        dynamic dynBooking = booking;
                                        if (dynBooking.DepositPaid != null)
                                        {
                                            depositPaid = Convert.ToBoolean(dynBooking.DepositPaid);
                                        }
                                    }
                                }
                                catch { }
                            }
                            @if (depositPaid)
                            {
                                <span class="status-badge status-confirmed" style="margin-left: 10px;">Paid</span>
                            }
                            else
                            {
                                <span class="status-badge status-pending" style="margin-left: 10px;">Pending</span>
                            }
                        </span>
                    </div>
                }

                @* Show cancellation charge if booking has been cancelled and a charge is applied *@
                @{
                    decimal cancellationCharge = 0;
                    try
                    {
                        var booking = ViewBag.Booking;
                        if (booking is System.Collections.IDictionary dict && dict.Contains("CancellationCharge") && dict["CancellationCharge"] != null)
                        {
                            cancellationCharge = Convert.ToDecimal(dict["CancellationCharge"]);
                        }
                        else
                        {
                            dynamic dynBooking = booking;
                            if (dynBooking != null && dynBooking.CancellationCharge != null)
                            {
                                cancellationCharge = Convert.ToDecimal(dynBooking.CancellationCharge);
                            }
                        }
                    }
                    catch { }
                }
                @if (ViewBag.Booking.Status == "Cancelled" && cancellationCharge > 0)
                {
                    <div class="detail-row">
                        <span class="detail-label">Cancellation Charge:</span>
                        <span class="detail-value">@cancellationCharge.ToString("C")</span>
                    </div>
                }
            </div>

            <div class="alert alert-info">
                <i class="fas fa-envelope"></i> A confirmation email has been sent to <strong>@ViewBag.Booking.CustomerEmail</strong>
            </div>

            @if (ViewBag.Booking.Status == "Pending")
            {
                <div class="alert alert-warning">
                    <i class="fas fa-clock"></i> Your booking is pending confirmation. You will receive an email once it's confirmed.
                </div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.CancellationToken))
            {
                <div class="text-center">
                    <a href="/publicbooking/bookingcancellation?bookingNo=@ViewBag.BookingNo&token=@ViewBag.CancellationToken" class="btn-cancel">
                        <i class="fas fa-times"></i> Cancel Booking
                    </a>
                </div>
            }
            else
            {
                if (ViewBag.EnableCancellation == false)
                {
                    if (ViewBag.CancelledDueToDaysBefore == true && ViewBag.CancellationDaysBefore != null)
                    {
                        <div class="text-center">
                            <p class="text-muted"><i class="fas fa-info-circle"></i> Cancellation must be done at least @ViewBag.CancellationDaysBefore day(s) before the booking date. Please contact the restaurant directly to cancel your booking.</p>
                        </div>
                    }
                    else if (ViewBag.BookingStatus == "Confirmed" && ViewBag.AllowCancelAfterConfirm == false)
                    {
                        <div class="text-center">
                            <p class="text-muted"><i class="fas fa-info-circle"></i> Cancellation is not allowed after booking confirmation. Please contact the restaurant directly to cancel your booking.</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <p class="text-muted"><i class="fas fa-info-circle"></i> Online cancellation is currently disabled. Please contact the restaurant directly to cancel your booking.</p>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center">
                        <p class="text-muted">Need to cancel? Check your email for the cancellation link.</p>
                    </div>
                }
            }
        </div>
    </div>
</body>
</html>

