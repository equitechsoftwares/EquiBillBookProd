<script>
    function toggleBenefits(id) {
        // Hide all benefit content
        $('.benefit-content').removeClass('show').hide();
        
        // Remove active class from all benefit items
        $('.benefit-item').removeClass('active');
        
        // Show selected benefit content with animation
        $('.div' + id).show().addClass('show');
        
        // Add active class to clicked benefit item
        $('.benefit-item').eq(id - 1).addClass('active');
    }
    
    // Initialize first benefit as active
    $(document).ready(function() {
        $('.div1').addClass('show');
        $('.benefit-item').first().addClass('active');
    });
</script>